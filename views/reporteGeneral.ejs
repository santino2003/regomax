    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Establecer la fecha de hoy por defecto
            document.getElementById('fechaReporte').valueAsDate = new Date();
            
            // Evento para generar el reporte
            document.getElementById('btnGenerarReporte').addEventListener('click', generarReporte);
            
            // Evento para exportar a Excel
            document.getElementById('btnExportarExcel').addEventListener('click', exportarExcel);
            
            // Evento para imprimir
            document.getElementById('btnImprimir').addEventListener('click', imprimirReporte);
        });

        async function generarReporte() {
            const fecha = document.getElementById('fechaReporte').value;
            
            if (!fecha) {
                alert('Por favor seleccione una fecha para generar el reporte');
                return;
            }
            
            // Mostrar loading
            document.getElementById('loadingAlert').innerHTML = '<i class="bi bi-spinner bi-spin"></i> Cargando datos del reporte...';
            document.getElementById('reporteContent').style.display = 'none';
            
            try {
                const response = await fetch(`/api/reportes/completo?fecha=${fecha}`);
                const data = await response.json();
                
                if (data.success) {
                    mostrarReporte(data.data);
                } else {
                    document.getElementById('loadingAlert').innerHTML = 
                        `<i class="bi bi-exclamation-triangle"></i> Error: ${data.message || 'No se pudo cargar el reporte'}`;
                }
            } catch (error) {
                console.error('Error al generar reporte:', error);
                document.getElementById('loadingAlert').innerHTML = 
                    '<i class="bi bi-exclamation-triangle"></i> Error al conectar con el servidor';
            }
        }

        function mostrarReporte(data) {
            // Actualizar fecha en el encabezado - asegurándonos que se muestre correctamente
            let fechaReporte = data.fecha; // formato YYYY-MM-DD
            const [year, month, day] = fechaReporte.split('-');
            // Crear una fecha específica sin depender de la zona horaria
            const fechaFormateada = new Date(year, month-1, day);
            document.getElementById('fechaReporteHeader').textContent = fechaFormateada.toLocaleDateString();
            
            // 1. Producción diaria por producto
            const tablaProduccionDiaria = document.getElementById('tablaProduccionDiaria').getElementsByTagName('tbody')[0];
            tablaProduccionDiaria.innerHTML = '';
            
            let totalBolsonesDia = 0;
            let totalPesoDia = 0;
            
            if (data.produccion && data.produccion.length > 0) {
                data.produccion.forEach(prod => {
                    const row = tablaProduccionDiaria.insertRow();
                    row.insertCell(0).textContent = prod.nombre;
                    row.insertCell(1).textContent = prod.cantidadBolsones;
                    row.insertCell(2).textContent = `${formatNumber(prod.pesoTotal)} kg`;
                    
                    totalBolsonesDia += prod.cantidadBolsones;
                    totalPesoDia += prod.pesoTotal;
                });
            } else {
                const row = tablaProduccionDiaria.insertRow();
                const cell = row.insertCell(0);
                cell.colSpan = 3;
                cell.textContent = "No hay datos de producción para esta fecha";
                cell.className = "text-center";
            }
            
            document.getElementById('totalBolsonesDia').textContent = totalBolsonesDia;
            document.getElementById('totalPesoDia').textContent = `${formatNumber(totalPesoDia)} kg`;
            document.getElementById('produccionTotalDia').textContent = `${formatNumber(totalPesoDia)} kg`;
            
            // 2. Acumulado mensual por producto
            const tablaAcumuladoMes = document.getElementById('tablaAcumuladoMes').getElementsByTagName('tbody')[0];
            tablaAcumuladoMes.innerHTML = '';
            
            let totalBolsonesMes = 0;
            let totalPesoMes = 0;
            let totalProyeccionMes = 0;
            
            if (data.stockAcumuladoMes && data.stockAcumuladoMes.length > 0) {
                data.stockAcumuladoMes.forEach(prod => {
                    const row = tablaAcumuladoMes.insertRow();
                    row.insertCell(0).textContent = prod.nombre;
                    row.insertCell(1).textContent = prod.cantidadBolsones;
                    row.insertCell(2).textContent = `${formatNumber(prod.pesoTotal)} kg`;
                    row.insertCell(3).textContent = `${formatNumber(prod.proyeccion)} kg`;
                    
                    totalBolsonesMes += prod.cantidadBolsones;
                    totalPesoMes += prod.pesoTotal;
                    totalProyeccionMes += prod.proyeccion || 0;
                });
            } else {
                const row = tablaAcumuladoMes.insertRow();
                const cell = row.insertCell(0);
                cell.colSpan = 4;
                cell.textContent = "No hay datos acumulados para este mes";
                cell.className = "text-center";
            }
            
            document.getElementById('totalBolsonesMes').textContent = totalBolsonesMes;
            document.getElementById('totalPesoMes').textContent = `${formatNumber(totalPesoMes)} kg`;
            document.getElementById('totalProyeccionMes').textContent = `${formatNumber(totalProyeccionMes)} kg`;
            
            // 3. Datos NFU
            document.getElementById('nfuDiario').textContent = `${formatNumber(data.nfu.diario.cantidadTotal)} kg`;
            document.getElementById('nfuMensual').textContent = `${formatNumber(data.nfu.acumuladoMes.cantidadTotal)} kg`;
            document.getElementById('nfuProyeccion').textContent = `${formatNumber(data.nfu.acumuladoMes.proyeccion)} kg`;
            document.getElementById('nfuHistorico').textContent = `${formatNumber(data.nfu.acumuladoHistorico.cantidadTotal)} kg`;
            document.getElementById('nfuTotalDia').textContent = `${formatNumber(data.nfu.diario.cantidadTotal)} kg`;
            
            // 4. Stock Total
            const tablaStockTotal = document.getElementById('tablaStockTotal').getElementsByTagName('tbody')[0];
            tablaStockTotal.innerHTML = '';
            
            let totalBolsonesStock = 0;
            let totalPesoStock = 0;
            
            if (data.stockAcumuladoHistorico && data.stockAcumuladoHistorico.length > 0) {
                data.stockAcumuladoHistorico.forEach(prod => {
                    const row = tablaStockTotal.insertRow();
                    row.insertCell(0).textContent = prod.nombre;
                    row.insertCell(1).textContent = prod.cantidadBolsones;
                    row.insertCell(2).textContent = `${formatNumber(prod.pesoTotal)} kg`;
                    
                    totalBolsonesStock += prod.cantidadBolsones;
                    totalPesoStock += prod.pesoTotal;
                });
            } else {
                const row = tablaStockTotal.insertRow();
                const cell = row.insertCell(0);
                cell.colSpan = 3;
                cell.textContent = "No hay stock disponible";
                cell.className = "text-center";
            }
            
            document.getElementById('totalBolsonesStock').textContent = totalBolsonesStock;
            document.getElementById('totalPesoStock').textContent = `${formatNumber(totalPesoStock)} kg`;
            
            // 5. Despachos del día
            const tablaDespachosDia = document.getElementById('tablaDespachosDia').getElementsByTagName('tbody')[0];
            tablaDespachosDia.innerHTML = '';
            
            let totalBolsonesDespachoDia = 0;
            let totalPesoDespachoDia = 0;
            
            if (data.despachos && data.despachos.length > 0) {
                data.despachos.forEach(desp => {
                    const row = tablaDespachosDia.insertRow();
                    row.insertCell(0).textContent = desp.nombre;
                    row.insertCell(1).textContent = desp.cantidadBolsones;
                    row.insertCell(2).textContent = `${formatNumber(desp.pesoTotal)} kg`;
                    
                    totalBolsonesDespachoDia += desp.cantidadBolsones;
                    totalPesoDespachoDia += desp.pesoTotal;
                });
            } else {
                const row = tablaDespachosDia.insertRow();
                const cell = row.insertCell(0);
                cell.colSpan = 3;
                cell.textContent = "No hay despachos para esta fecha";
                cell.className = "text-center";
            }
            
            document.getElementById('totalBolsonesDespachoDia').textContent = totalBolsonesDespachoDia;
            document.getElementById('totalPesoDespachoDia').textContent = `${formatNumber(totalPesoDespachoDia)} kg`;
            document.getElementById('despachosTotalDia').textContent = `${formatNumber(totalPesoDespachoDia)} kg`;
            
            // 6. Despachos acumulados del mes
            const tablaDespachosAcumulados = document.getElementById('tablaDespachosAcumulados').getElementsByTagName('tbody')[0];
            tablaDespachosAcumulados.innerHTML = '';
            
            let totalBolsonesDespachosAcum = 0;
            let totalPesoDespachosAcum = 0;
            
            if (data.despachosAcumuladosMes && data.despachosAcumuladosMes.length > 0) {
                data.despachosAcumuladosMes.forEach(desp => {
                    const row = tablaDespachosAcumulados.insertRow();
                    row.insertCell(0).textContent = desp.nombre;
                    row.insertCell(1).textContent = desp.cantidadBolsones;
                    row.insertCell(2).textContent = `${formatNumber(desp.pesoTotal)} kg`;
                    
                    totalBolsonesDespachosAcum += desp.cantidadBolsones;
                    totalPesoDespachosAcum += desp.pesoTotal;
                });
            } else {
                const row = tablaDespachosAcumulados.insertRow();
                const cell = row.insertCell(0);
                cell.colSpan = 3;
                cell.textContent = "No hay despachos acumulados para este mes";
                cell.className = "text-center";
            }
            
            document.getElementById('totalBolsonesDespachosAcum').textContent = totalBolsonesDespachosAcum;
            document.getElementById('totalPesoDespachosAcum').textContent = `${formatNumber(totalPesoDespachosAcum)} kg`;
            
            // Mostrar el contenido del reporte y ocultar mensaje de loading
            document.getElementById('loadingAlert').style.display = 'none';
            document.getElementById('reporteContent').style.display = 'block';
        }

        function exportarExcel() {
            if (document.getElementById('reporteContent').style.display === 'none') {
                alert('Primero debe generar un reporte');
                return;
            }

            const workbook = XLSX.utils.book_new();
            
            // Fecha del reporte
            const fecha = document.getElementById('fechaReporteHeader').textContent;
            
            // Producción diaria
            const tablaProduccion = document.getElementById('tablaProduccionDiaria');
            const wsProduccion = XLSX.utils.table_to_sheet(tablaProduccion);
            XLSX.utils.book_append_sheet(workbook, wsProduccion, "Producción Diaria");
            
            // Acumulado del mes
            const tablaAcumulado = document.getElementById('tablaAcumuladoMes');
            const wsAcumulado = XLSX.utils.table_to_sheet(tablaAcumulado);
            XLSX.utils.book_append_sheet(workbook, wsAcumulado, "Acumulado Mensual");
            
            // NFU - Crear una tabla simple para NFU
            const dataNFU = [
                ["Neumáticos Fuera de Uso (NFU)"],
                ["Ingreso Diario", document.getElementById('nfuDiario').textContent],
                ["Acumulado Mensual", document.getElementById('nfuMensual').textContent],
                ["Proyección Mensual", document.getElementById('nfuProyeccion').textContent],
                ["Acumulado Histórico", document.getElementById('nfuHistorico').textContent]
            ];
            const wsNFU = XLSX.utils.aoa_to_sheet(dataNFU);

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nueva Orden de Compra - Regomax</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/assets/css/home.css">
    <style>
        .item-row {
            background-color: #f8f9fa;
            padding: 15px;
            margin-bottom: 10px;
            border-radius: 5px;
            border: 1px solid #dee2e6;
        }
        .btn-remove-item {
            position: absolute;
            top: 10px;
            right: 10px;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/home">
                <img src="/assets/img/regomax.png" alt="Regomax Logo" class="bg-white rounded p-1">
                <span class="ms-2 fw-bold">Regomax S.A.</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item user-welcome me-3">
                        <span class="text-light">BIENVENIDO/A, <b><%= username %></b></span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-globe me-1"></i> Ver sitio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" id="logout-link"><i class="bi bi-box-arrow-right me-1"></i> Cerrar sesión</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container my-4">
        <div class="row mb-4">
            <div class="col">
                <div class="menu-container p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="menu-heading mb-0">
                            <i class="bi bi-plus-circle me-2"></i>Nueva Orden de Compra
                        </h4>
                        <a href="/ordenes-compra" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Volver
                        </a>
                    </div>
                    
                    <div id="alertPlaceholder"></div>
                    
                    <form id="formNuevaOrden" class="needs-validation" novalidate>
                        <!-- Información General -->
                        <div class="card mb-3 shadow-sm">
                            <div class="card-header" style="background-color: #17a2b8; color: white;">
                                <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Información General</h5>
                            </div>
                            <div class="card-body bg-light">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label for="condicion" class="form-label">Condición <span class="text-danger">*</span></label>
                                        <select class="form-select" id="condicion" name="condicion" required>
                                            <option value="">Seleccionar...</option>
                                            <option value="No Critica">No Crítica</option>
                                            <option value="Semi Critica">Semi Crítica</option>
                                            <option value="Muy Critica">Muy Crítica</option>
                                        </select>
                                        <div class="invalid-feedback">La condición es obligatoria</div>
                                    </div>
                                </div>
                                
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label for="fecha_entrega_solicitada" class="form-label">Fecha de Entrega Solicitada</label>
                                        <input type="date" class="form-control" id="fecha_entrega_solicitada" name="fecha_entrega_solicitada">
                                    </div>
                                    <div class="col-md-6">
                                        <label for="fecha_entrega_proveedor" class="form-label">Fecha de Entrega Proveedor</label>
                                        <input type="date" class="form-control" id="fecha_entrega_proveedor" name="fecha_entrega_proveedor">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-12">
                                        <label for="asunto" class="form-label">Asunto</label>
                                        <textarea class="form-control" id="asunto" name="asunto" rows="3"></textarea>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-12">
                                        <label class="form-label">Archivos Adjuntos</label>
                                        <div class="d-flex gap-2 mb-2">
                                            <button type="button" class="btn btn-sm btn-outline-primary" id="btnAgregarArchivo">
                                                <i class="bi bi-paperclip me-1"></i>Agregar Archivo(s)
                                            </button>
                                        </div>
                                        <input type="file" class="d-none" id="archivoInput" multiple accept=".pdf,.doc,.docx,.xls,.xlsx,.jpg,.jpeg,.png,.dwg">
                                        <div id="listaArchivos" class="border rounded p-2 bg-light" style="min-height: 50px;">
                                            <small class="text-muted">No hay archivos seleccionados</small>
                                        </div>
                                        <small class="text-muted">Formatos permitidos: PDF, Word, Excel, Imágenes, DWG (máx. 10MB por archivo).</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Items de la Orden -->
                        <div class="card mb-3 shadow-sm">
                            <div class="card-header" style="background-color: #5bc0de; color: white;">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>ITEMS</h5>
                                    <button type="button" class="btn btn-light btn-sm" id="btnAgregarItem">
                                        <i class="bi bi-plus-circle me-1"></i>Agregar otro/a Item
                                    </button>
                                </div>
                            </div>
                            <div class="card-body bg-light" id="itemsContainer">
                                <!-- Los items se agregarán dinámicamente aquí -->
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a href="/ordenes-compra" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary" id="btnGuardar">
                                <i class="bi bi-save me-1"></i>Guardar Orden de Compra
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        const token = localStorage.getItem('token');
        // Datos cargados desde el servidor (EJS)
        let bienes = <%- JSON.stringify(bienes) %>;
        let proveedores = <%- JSON.stringify(proveedores) %>;
        let unidadesMedida = <%- JSON.stringify(unidadesMedida) %>;
        let centrosCosto = <%- JSON.stringify(centrosCosto) %>;
        let itemCounter = 0;
        let archivosSeleccionados = []; // Array para guardar los archivos

        $(document).ready(function() {
            agregarItemVacio();

            $('#btnAgregarItem').on('click', agregarItemVacio);
            
            // Manejar el botón de agregar archivo
            $('#btnAgregarArchivo').on('click', function() {
                $('#archivoInput').click();
            });

            // Manejar la selección de archivos
            $('#archivoInput').on('change', function(e) {
                const nuevosArchivos = Array.from(e.target.files);
                
                // Validar tamaño (10MB por archivo)
                for (const archivo of nuevosArchivos) {
                    if (archivo.size > 10 * 1024 * 1024) {
                        mostrarAlerta(`El archivo "${archivo.name}" excede el tamaño máximo de 10MB`, 'warning');
                        continue;
                    }
                    
                    // Verificar si el archivo ya fue agregado
                    const yaExiste = archivosSeleccionados.some(a => a.name === archivo.name && a.size === archivo.size);
                    if (!yaExiste) {
                        archivosSeleccionados.push(archivo);
                    }
                }
                
                actualizarListaArchivos();
                // Limpiar el input para poder seleccionar el mismo archivo nuevamente
                e.target.value = '';
            });
            
            $('#formNuevaOrden').on('submit', function(e) {
                e.preventDefault();
                if (this.checkValidity()) {
                    guardarOrden();
                }
                this.classList.add('was-validated');
            });

            $('#logout-link').on('click', function(e) {
                e.preventDefault();
                localStorage.removeItem('token');
                window.location.href = '/login.html';
            });
        });

        function agregarItemVacio() {
            itemCounter++;
            const itemHtml = `
                <div class="item-row position-relative" data-item="${itemCounter}">
                    <button type="button" class="btn btn-danger btn-sm btn-remove-item" onclick="eliminarItem(${itemCounter})">
                        <i class="bi bi-x-lg"></i> ¿ELIMINAR?
                    </button>
                    
                    <div class="row mb-2">
                        <div class="col-md-6">
                            <label class="form-label">BIEN <span class="text-danger">*</span></label>
                            <select class="form-select select2-bien" name="items[${itemCounter}][bien_id]" required>
                                <option value="">---------</option>
                                ${bienes.map(b => `<option value="${b.id}">${b.codigo} - ${b.nombre}</option>`).join('')}
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">CENTRO COSTO</label>
                            <select class="form-select" name="items[${itemCounter}][centro_costo]">
                                <option value="">---------</option>
                                ${centrosCosto.map(cc => `<option value="${cc.nombre}">${cc.nombre}</option>`).join('')}
                            </select>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-12">
                            <label class="form-label">DESCRIPCIÓN</label>
                            <textarea class="form-control" name="items[${itemCounter}][descripcion]" rows="2"></textarea>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <label class="form-label">CANTIDAD <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" name="items[${itemCounter}][cantidad]" step="0.01" required>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">UNIDAD DE MEDIDA</label>
                            <select class="form-select" name="items[${itemCounter}][unidad_medida_id]">
                                <option value="">---------</option>
                                ${unidadesMedida.map(um => `<option value="${um.id}">${um.nombre}</option>`).join('')}
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">PROVEEDOR SUGERIDO</label>
                            <select class="form-select" name="items[${itemCounter}][proveedor_sugerido_id]">
                                <option value="">---------</option>
                                ${proveedores.map(p => `<option value="${p.id}">${p.nombre}</option>`).join('')}
                            </select>
                        </div>
                    </div>
                </div>
            `;
            
            $('#itemsContainer').append(itemHtml);
            
            // Inicializar Select2 para el nuevo item
            $(`[data-item="${itemCounter}"] .select2-bien`).select2({
                theme: 'bootstrap-5',
                width: '100%',
                placeholder: 'Buscar bien...'
            });
        }

        function actualizarListaArchivos() {
            const listaArchivos = $('#listaArchivos');
            
            if (archivosSeleccionados.length === 0) {
                listaArchivos.html('<small class="text-muted">No hay archivos seleccionados</small>');
                return;
            }
            
            let html = '<div class="list-group list-group-flush">';
            archivosSeleccionados.forEach((archivo, index) => {
                const tamañoMB = (archivo.size / (1024 * 1024)).toFixed(2);
                const icono = obtenerIconoArchivo(archivo.name);
                
                html += `
                    <div class="list-group-item d-flex justify-content-between align-items-center py-2 px-2">
                        <div class="d-flex align-items-center">
                            <i class="bi ${icono} me-2 text-primary"></i>
                            <div>
                                <small class="fw-bold d-block">${archivo.name}</small>
                                <small class="text-muted">${tamañoMB} MB</small>
                            </div>
                        </div>
                        <button type="button" class="btn btn-sm btn-danger" onclick="eliminarArchivo(${index})" title="Eliminar">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                `;
            });
            html += '</div>';
            
            listaArchivos.html(html);
        }

        function obtenerIconoArchivo(nombre) {
            const extension = nombre.split('.').pop().toLowerCase();
            const iconos = {
                'pdf': 'bi-file-pdf-fill',
                'doc': 'bi-file-word-fill',
                'docx': 'bi-file-word-fill',
                'xls': 'bi-file-excel-fill',
                'xlsx': 'bi-file-excel-fill',
                'jpg': 'bi-file-image-fill',
                'jpeg': 'bi-file-image-fill',
                'png': 'bi-file-image-fill',
                'dwg': 'bi-file-earmark-fill'
            };
            return iconos[extension] || 'bi-file-earmark-fill';
        }

        function eliminarArchivo(index) {
            archivosSeleccionados.splice(index, 1);
            actualizarListaArchivos();
        }

        function eliminarItem(itemId) {
            const itemsCount = $('.item-row').length;
            if (itemsCount <= 1) {
                mostrarAlerta('Debe haber al menos un item en la orden', 'warning');
                return;
            }
            $(`[data-item="${itemId}"]`).remove();
        }

        function guardarOrden() {
            const formData = new FormData();
            
            // Datos generales
            formData.append('proveedor_id', $('#proveedor_id').val() || '');
            formData.append('condicion', $('#condicion').val());
            formData.append('fecha_entrega_solicitada', $('#fecha_entrega_solicitada').val() || '');
            formData.append('fecha_entrega_proveedor', $('#fecha_entrega_proveedor').val() || '');
            formData.append('asunto', $('#asunto').val() || '');
            
            // Archivos adjuntos desde el array
            if (archivosSeleccionados.length > 0) {
                archivosSeleccionados.forEach(archivo => {
                    formData.append('archivos', archivo);
                });
            }

            // Recolectar items
            const items = [];
            $('.item-row').each(function() {
                const item = {
                    bien_id: $(this).find('[name*="[bien_id]"]').val(),
                    centro_costo: $(this).find('[name*="[centro_costo]"]').val() || null,
                    descripcion: $(this).find('[name*="[descripcion]"]').val() || null,
                    cantidad: parseFloat($(this).find('[name*="[cantidad]"]').val()) || 0,
                    unidad_medida_id: $(this).find('[name*="[unidad_medida_id]"]').val() || null,
                    proveedor_sugerido_id: $(this).find('[name*="[proveedor_sugerido_id]"]').val() || null
                };
                
                if (item.bien_id && item.cantidad > 0) {
                    items.push(item);
                }
            });

            if (items.length === 0) {
                mostrarAlerta('Debe agregar al menos un item válido', 'warning');
                return;
            }

            formData.append('items', JSON.stringify(items));

            $('#btnGuardar').prop('disabled', true).html('<i class="spinner-border spinner-border-sm me-1"></i>Guardando...');

            $.ajax({
                url: '/api/ordenes-compra/nuevo',
                method: 'POST',
                headers: { 'Authorization': `Bearer ${token}` },
                data: formData,
                processData: false,
                contentType: false,
                success: function(response) {
                    if (response.success) {
                        mostrarAlerta('Orden de compra creada exitosamente', 'success');
                        setTimeout(() => {
                            window.location.href = '/ordenes-compra';
                        }, 1500);
                    }
                },
                error: function(xhr) {
                    const error = xhr.responseJSON?.error || 'Error al crear orden de compra';
                    mostrarAlerta(error, 'danger');
                    $('#btnGuardar').prop('disabled', false).html('<i class="bi bi-save me-1"></i>Guardar Orden de Compra');
                }
            });
        }

        function mostrarAlerta(mensaje, tipo) {
            const alerta = `
                <div class="alert alert-${tipo} alert-dismissible fade show" role="alert">
                    ${mensaje}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
            $('#alertPlaceholder').html(alerta);
            setTimeout(() => $('.alert').alert('close'), 5000);
        }
    </script>
</body>
</html>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Acceso Denegado - Regomax</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <!-- Custom styles -->
    <link rel="stylesheet" href="/assets/css/home.css">
    
    <style>
        body {
            background-color: #f7f7f7;
            min-height: 100vh;
        }
        .permission-denied-container {
            max-width: 650px;
            margin: 30px auto;
            padding: 0;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            animation: fadeIn 0.5s ease-out forwards;
        }
        .permission-header {
            background-color: #dc3545;
            color: white;
            padding: 25px 30px;
            position: relative;
        }
        .permission-header::after {
            content: '';
            position: absolute;
            bottom: -15px;
            left: 50%;
            transform: translateX(-50%);
            width: 0;
            height: 0;
            border-left: 15px solid transparent;
            border-right: 15px solid transparent;
            border-top: 15px solid #dc3545;
        }
        .permission-body {
            background-color: white;
            padding: 30px;
        }
        .lock-icon {
            width: 120px;
            height: 120px;
            background-color: #f8f9fa;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 20px auto;
            animation: pulse 2s infinite;
        }
        .permission-info {
            background-color: #f8f9fa;
            border-radius: 8px;
            padding: 15px 20px;
            margin-bottom: 20px;
            border-left: 5px solid #ffc107;
        }
        .back-button {
            transition: transform 0.2s;
        }
        .back-button:hover {
            transform: translateX(-5px);
        }
        
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        @keyframes pulse {
            0% { box-shadow: 0 0 0 0 rgba(220, 53, 69, 0.4); }
            70% { box-shadow: 0 0 0 15px rgba(220, 53, 69, 0); }
            100% { box-shadow: 0 0 0 0 rgba(220, 53, 69, 0); }
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/home">
                <img src="/assets/img/regomax.png" alt="Regomax Logo" class="bg-white rounded p-1">
                <span class="ms-2 fw-bold">Regomax S.A.</span>
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <% if (locals.username) { %>
                    <li class="nav-item user-welcome me-3">
                        <span class="text-light">BIENVENIDO/A, <b><%= username %></b></span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-globe me-1"></i> Ver sitio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-key me-1"></i> Cambiar contrase침a</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" id="logout-link"><i class="bi bi-box-arrow-right me-1"></i> Cerrar sesi칩n</a>
                    </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container my-5">
        <div class="permission-denied-container">
            <div class="permission-header">
                <h3 class="m-0 d-flex align-items-center">
                    <i class="bi bi-shield-exclamation me-3"></i>
                    Acceso Denegado
                </h3>
            </div>
            <div class="permission-body">
                <div class="text-center">
                    <div class="lock-icon">
                        <i class="bi bi-lock-fill" style="font-size: 3.5rem; color: #dc3545;"></i>
                    </div>
                    
                    <h4 class="mb-4">No tienes permisos para acceder a esta funcionalidad</h4>
                    
                    <% if (locals.message) { %>
                        <p class="lead text-secondary mb-4"><%= message %></p>
                    <% } %>
                    
                    <% if (locals.requiredPermission) { %>
                        <div class="permission-info">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-key-fill text-warning me-3" style="font-size: 1.5rem;"></i>
                                <div class="text-start">
                                    <small class="text-muted d-block">Se requiere el siguiente permiso:</small>
                                    <span class="fw-bold"><%= requiredPermission %></span>
                                </div>
                            </div>
                        </div>
                    <% } else if (locals.requiredPermissions && locals.requiredPermissions.length > 0) { %>
                        <div class="permission-info">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-key-fill text-warning me-3" style="font-size: 1.5rem;"></i>
                                <div class="text-start">
                                    <small class="text-muted d-block">Se requiere alguno de los siguientes permisos:</small>
                                    <ul class="mb-0 mt-1">
                                        <% requiredPermissions.forEach(function(perm) { %>
                                            <li><span class="fw-bold"><%= perm %></span></li>
                                        <% }); %>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    <% } %>
                    
                    <div class="alert alert-secondary mt-4">
                        <i class="bi bi-info-circle me-2"></i>
                        Contacta a un administrador del sistema para solicitar los permisos necesarios
                    </div>
                    
                    <div class="mt-4">
                        <a href="/home" class="btn btn-primary">
                            <i class="bi bi-house-door me-2"></i>Ir al inicio
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <!-- Common JS -->
    <script src="/assets/js/common.js"></script>
    
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Configurar el bot칩n de volver atr치s
        const backButton = document.querySelector('.back-button');
        if (backButton) {
            backButton.addEventListener('click', function(e) {
                e.preventDefault();
                history.back();
            });
        }
    });
    </script>
</body>
</html>
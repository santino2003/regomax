<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Categoria - Regomax</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <!-- Custom styles -->
    <link rel="stylesheet" href="/assets/css/home.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/home">
                <img src="/assets/img/regomax.png" alt="Regomax Logo" class="bg-white rounded p-1">
                <span class="ms-2 fw-bold">Regomax S.A.</span>
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item user-welcome me-3">
                        <span class="text-light">BIENVENIDO/A, <b><%= username %></b></span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-globe me-1"></i> Ver sitio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" id="logout-link"><i class="bi bi-box-arrow-right me-1"></i> Cerrar sesión</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container my-4">
        <div class="row mb-4">
            <div class="col">
                <div class="menu-container p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="menu-heading mb-0">
                            <i class="bi bi-pencil me-2"></i>Editar Categoria
                        </h4>
                    </div>
                    
                    <!-- Alert placeholder para mensajes -->
                    <div id="alertPlaceholder"></div>
                    
                    <!-- Formulario de edición de categoria -->
                    <form id="formEditarCategoria" class="needs-validation" novalidate>
                        <input type="hidden" id="categoriaId" value="<%= categoria.id %>">
                        
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label for="nombre" class="form-label">Nombre de la Categoria <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="nombre" name="nombre" value="<%= categoria.nombre %>" required>
                                <div class="invalid-feedback">
                                    Por favor ingrese el nombre de la categoria.
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col">
                                <button type="submit" id="submitBtn" class="btn btn-primary">
                                    <i class="bi bi-save me-2"></i>Guardar Cambios
                                </button>
                                <a href="/categorias/<%= categoria.id %>" class="btn btn-outline-secondary ms-2">
                                    <i class="bi bi-x-circle me-2"></i>Cancelar
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <!-- Common JS -->
    <script src="/assets/js/common.js"></script>
    
    <!-- Script para editar categoria -->
    <script>
        $(document).ready(function() {
            const form = $('#formEditarCategoria');
            const submitBtn = $('#submitBtn');
            const alertPlaceholder = $('#alertPlaceholder');
            const categoriaId = $('#categoriaId').val();
            
            function showAlert(message, type) {
                const alertHtml = `
                    <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                        ${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                `;
                alertPlaceholder.html(alertHtml);
                window.scrollTo({ top: 0, behavior: 'smooth' });
                setTimeout(() => {
                    $('.alert').alert('close');
                }, 5000);
            }
            
            form.on('submit', function(e) {
                e.preventDefault();
                
                if (!form[0].checkValidity()) {
                    e.stopPropagation();
                    form.addClass('was-validated');
                    return;
                }
                
                const originalText = submitBtn.html();
                submitBtn.html('<span class="spinner-border spinner-border-sm me-2"></span>Guardando...').prop('disabled', true);
                
                const formData = {
                    nombre: $('#nombre').val().trim()
                };
                
                fetch(`/api/categorias/${categoriaId}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        window.location.href = `/categorias/${categoriaId}`;
                    } else {
                        showAlert(data.message || 'Error al actualizar la categoria', 'danger');
                        submitBtn.html(originalText).prop('disabled', false);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showAlert('Error al actualizar la categoria. Por favor intente nuevamente.', 'danger');
                    submitBtn.html(originalText).prop('disabled', false);
                });
            });
        });
    </script>
</body>
</html>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categorias - Regomax</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- Custom styles -->
    <link rel="stylesheet" href="/assets/css/home.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/home">
                <img src="/assets/img/regomax.png" alt="Regomax Logo" class="bg-white rounded p-1">
                <span class="ms-2 fw-bold">Regomax S.A.</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item user-welcome me-3">
                        <span class="text-light">BIENVENIDO/A, <b><%= username %></b></span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-globe me-1"></i> Ver sitio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" id="logout-link"><i class="bi bi-box-arrow-right me-1"></i> Cerrar sesión</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    <!-- Main Content -->
    <div class="container my-4">
        <div class="row mb-4">
            <div class="col">
                <div class="menu-container p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="menu-heading mb-0">
                            <i class="bi bi-tags me-2"></i>Gestión de Categorias
                        </h4>
                        <div>
                            <a href="/categorias/nuevo" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-2"></i>Nueva Categoria
                            </a>
                        </div>
                    </div>
                    
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Responsable</th>
                                    <th>Fecha Creación</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(categorias && categorias.length > 0) { %>
                                    <% categorias.forEach(categoria => { %>
                                        <tr>
                                            <td><%= categoria.nombre %></td>
                                            <td><%= categoria.responsable || '-' %></td>
                                            <td><%= categoria.fecha_creacion ? new Date(categoria.fecha_creacion).toLocaleDateString('es-AR') : '-' %></td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="/categorias/<%= categoria.id %>" class="btn btn-sm btn-outline-primary" title="Ver">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a href="/categorias/editar/<%= categoria.id %>" class="btn btn-sm btn-outline-secondary" title="Editar">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <button class="btn btn-sm btn-outline-danger btn-delete" data-id="<%= categoria.id %>" title="Eliminar">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4" class="text-center">No hay categorias registradas</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                        
                        <!-- Paginación -->
                        <% if (pagination && pagination.totalPages > 1) { %>
                            <nav aria-label="Navegación de categorias">
                                <ul class="pagination justify-content-center">
                                    <!-- Botón Primera Página -->
                                    <li class="page-item <%= pagination.page === 1 ? 'disabled' : '' %>">
                                        <a class="page-link" href="/categorias?page=1&limit=<%= pagination.limit %>" aria-label="Primera">
                                            <span aria-hidden="true">&laquo;&laquo;</span>
                                        </a>
                                    </li>
                                    
                                    <!-- Botón Anterior -->
                                    <li class="page-item <%= pagination.page === 1 ? 'disabled' : '' %>">
                                        <a class="page-link" href="/categorias?page=<%= pagination.page - 1 %>&limit=<%= pagination.limit %>" aria-label="Anterior">
                                            <span aria-hidden="true">&laquo;</span>
                                        </a>
                                    </li>
                                    
                                    <% 
                                    // Determinar qué páginas mostrar
                                    const totalPages = pagination.totalPages;
                                    const currentPage = pagination.page;
                                    const maxPagesToShow = 5;
                                    
                                    let startPage = Math.max(1, currentPage - Math.floor(maxPagesToShow / 2));
                                    let endPage = Math.min(totalPages, startPage + maxPagesToShow - 1);
                                    
                                    if (endPage - startPage + 1 < maxPagesToShow) {
                                        startPage = Math.max(1, endPage - maxPagesToShow + 1);
                                    }
                                    
                                    if (startPage > 1) { 
                                    %>
                                        <li class="page-item">
                                            <a class="page-link" href="/categorias?page=1&limit=<%= pagination.limit %>">1</a>
                                        </li>
                                        <% if (startPage > 2) { %>
                                            <li class="page-item disabled"><span class="page-link">...</span></li>
                                        <% } %>
                                    <% } %>
                                    
                                    <!-- Páginas numéricas -->
                                    <% for (let i = startPage; i <= endPage; i++) { %>
                                        <li class="page-item <%= pagination.page === i ? 'active' : '' %>">
                                            <a class="page-link" href="/categorias?page=<%= i %>&limit=<%= pagination.limit %>"><%= i %></a>
                                        </li>
                                    <% } %>
                                    
                                    <!-- Mostrar última página si no está en el rango -->
                                    <% if (endPage < totalPages) { %>
                                        <% if (endPage < totalPages - 1) { %>
                                            <li class="page-item disabled"><span class="page-link">...</span></li>
                                        <% } %>
                                        <li class="page-item">
                                            <a class="page-link" href="/categorias?page=<%= totalPages %>&limit=<%= pagination.limit %>"><%= totalPages %></a>
                                        </li>
                                    <% } %>
                                    
                                    <!-- Botón Siguiente -->
                                    <li class="page-item <%= pagination.page === pagination.totalPages ? 'disabled' : '' %>">
                                        <a class="page-link" href="/categorias?page=<%= pagination.page + 1 %>&limit=<%= pagination.limit %>" aria-label="Siguiente">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                                    
                                    <!-- Botón Última Página -->
                                    <li class="page-item <%= pagination.page === pagination.totalPages ? 'disabled' : '' %>">
                                        <a class="page-link" href="/categorias?page=<%= pagination.totalPages %>&limit=<%= pagination.limit %>" aria-label="Última">
                                            <span aria-hidden="true">&raquo;&raquo;</span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        <% } %>
                        
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <div>
                                <% if (pagination) { %>
                                    <p class="text-muted mb-0">
                                        Mostrando <%= ((pagination.page - 1) * pagination.limit) + 1 %> - 
                                        <%= Math.min(pagination.page * pagination.limit, pagination.total) %> 
                                        de <%= pagination.total %> categorias
                                    </p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <a href="/home" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Volver al panel
                </a>
            </div>
        </div>
    </div>

    <!-- Modal de Confirmación para Eliminar -->
    <div class="modal fade" id="deleteCategoriaModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title"><i class="bi bi-exclamation-triangle-fill me-2"></i>Confirmar Eliminación</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>¿Está seguro que desea eliminar la categoria <span id="deleteCategoriaNombre" class="fw-bold"></span>?</p>
                    <p class="text-danger mb-0">¡Esta acción no se puede deshacer!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-danger" id="confirmDelete">Eliminar</button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Common JS -->
    <script src="/assets/js/common.js"></script>
    
    <!-- Script para manejar eliminación -->
    <script>
        $(document).ready(function() {
            let categoriaIdToDelete = null;
            const deleteModal = new bootstrap.Modal(document.getElementById('deleteCategoriaModal'));
            
            // Manejar clic en botón de eliminar
            $('.btn-delete').on('click', function() {
                categoriaIdToDelete = $(this).data('id');
                const categoriaNombre = $(this).closest('tr').find('td:first').text();
                
                $('#deleteCategoriaNombre').text(categoriaNombre);
                deleteModal.show();
            });
            
            // Confirmar eliminación
            $('#confirmDelete').on('click', function() {
                if (!categoriaIdToDelete) return;
                
                const btn = $(this);
                const originalText = btn.html();
                btn.html('<span class="spinner-border spinner-border-sm me-2"></span>Eliminando...').prop('disabled', true);
                
                fetch(`/api/categorias/${categoriaIdToDelete}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        deleteModal.hide();
                        window.location.reload();
                    } else {
                        deleteModal.hide();
                        console.error('Error:', data.message || 'No se pudo eliminar la categoria');
                        setTimeout(() => window.location.reload(), 500);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    deleteModal.hide();
                    setTimeout(() => window.location.reload(), 500);
                })
                .finally(() => {
                    btn.html(originalText).prop('disabled', false);
                });
            });
        });
    </script>
</body>
</html>

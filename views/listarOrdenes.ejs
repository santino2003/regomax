<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Órdenes de Venta - Regomax</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <!-- Custom styles -->
    <link rel="stylesheet" href="/assets/css/home.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/home">
                <img src="/assets/img/regomax.png" alt="Regomax Logo" class="bg-white rounded p-1">
                <span class="ms-2 fw-bold">Regomax S.A.</span>
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item user-welcome me-3">
                        <span class="text-light">BIENVENIDO/A, <b><%= username %></b></span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-globe me-1"></i> Ver sitio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-key me-1"></i> Cambiar contraseña</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" id="logout-link"><i class="bi bi-box-arrow-right me-1"></i> Cerrar sesión</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container my-4">
        <div class="row mb-4">
            <div class="col">
                <div class="menu-container p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="menu-heading mb-0">
                            <i class="bi bi-receipt me-2"></i>Gestión de Órdenes de Venta
                        </h4>
                        <a href="/ordenes/nueva" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-2"></i>Nueva Orden
                        </a>
                    </div>
                    
                    <!-- Filtros de búsqueda -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <form id="searchForm" action="/ordenes" method="GET" class="d-flex">
                                <div class="input-group">
                                    <input type="text" id="searchInput" name="search" class="form-control" placeholder="Buscar por código o cliente..." value="<%= typeof currentSearch !== 'undefined' ? currentSearch : '' %>" aria-label="Buscar">
                                    <button class="btn btn-outline-secondary" type="submit">
                                        <i class="bi bi-search"></i>
                                    </button>
                                    <input type="hidden" name="page" value="1">
                                    <input type="hidden" name="limit" value="<%= pagination ? pagination.limit : 10 %>">
                                    <% if (typeof currentEstado !== 'undefined' && currentEstado) { %>
                                        <input type="hidden" name="estado" value="<%= currentEstado %>">
                                    <% } %>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-6 text-md-end mt-3 mt-md-0">
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-outline-secondary filter-btn <%= !currentEstado || currentEstado === 'todos' ? 'active' : '' %>" data-filter="todos">Todos</button>
                                <button type="button" class="btn btn-outline-warning filter-btn <%= currentEstado === 'abierta' ? 'active' : '' %>" data-filter="abierta">Abiertas</button>
                                <button type="button" class="btn btn-outline-info filter-btn <%= currentEstado === 'en_logistica' ? 'active' : '' %>" data-filter="en_logistica">En Logística</button>
                                <button type="button" class="btn btn-outline-success filter-btn <%= currentEstado === 'cerrada' ? 'active' : '' %>" data-filter="cerrada">Cerradas</button>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Tabla de órdenes -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Código</th>
                                    <th>Cliente</th>
                                    <th>Fecha</th>
                                    <th>Estado</th>
                                    <th>Responsable</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(ordenes && ordenes.length > 0) { %>
                                    <% ordenes.forEach(orden => { %>
                                        <tr>
                                            <td><%= orden.codigo_venta %></td>
                                            <td><%= orden.cliente %></td>
                                            <td><%= new Date(orden.fecha).toLocaleDateString() %></td>
                                            <td>
                                                <% let badgeClass = "bg-secondary"; %>
                                                <% if (orden.estado === "abierta") { badgeClass = "bg-warning text-dark"; } %>
                                                <% if (orden.estado === "en_logistica") { badgeClass = "bg-info"; } %>
                                                <% if (orden.estado === "cerrada") { badgeClass = "bg-success"; } %>
                                                <span class="badge <%= badgeClass %>"><%= orden.estado ? orden.estado.toUpperCase().replace('_', ' ') : 'PENDIENTE' %></span>
                                            </td>
                                            <td><%= orden.responsable %></td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="/ordenes/<%= orden.id %>" class="btn btn-sm btn-outline-primary" title="Ver detalles">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a href="/ordenes/editar/<%= orden.id %>" class="btn btn-sm btn-outline-secondary" title="Editar orden">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <button class="btn btn-sm btn-outline-danger btn-delete" data-id="<%= orden.id %>" title="Eliminar orden">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="6" class="text-center">No hay órdenes registradas</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                        
                        <!-- Controles de paginación -->
                        <% if (pagination && pagination.totalPages > 1) { %>
                            <nav aria-label="Navegación de órdenes">
                                <ul class="pagination justify-content-center">
                                    <li class="page-item <%= pagination.page === 1 ? 'disabled' : '' %>">
                                        <a class="page-link" href="/ordenes?page=<%= pagination.page - 1 %>&limit=<%= pagination.limit %><%= typeof currentSearch !== 'undefined' && currentSearch ? '&search=' + currentSearch : '' %><%= typeof currentEstado !== 'undefined' && currentEstado ? '&estado=' + currentEstado : '' %>" tabindex="-1">Anterior</a>
                                    </li>
                                    
                                    <% for(let i = 1; i <= pagination.totalPages; i++) { %>
                                        <li class="page-item <%= pagination.page === i ? 'active' : '' %>">
                                            <a class="page-link" href="/ordenes?page=<%= i %>&limit=<%= pagination.limit %><%= typeof currentSearch !== 'undefined' && currentSearch ? '&search=' + currentSearch : '' %><%= typeof currentEstado !== 'undefined' && currentEstado ? '&estado=' + currentEstado : '' %>"><%= i %></a>
                                        </li>
                                    <% } %>
                                    
                                    <li class="page-item <%= pagination.page === pagination.totalPages ? 'disabled' : '' %>">
                                        <a class="page-link" href="/ordenes?page=<%= pagination.page + 1 %>&limit=<%= pagination.limit %><%= typeof currentSearch !== 'undefined' && currentSearch ? '&search=' + currentSearch : '' %><%= typeof currentEstado !== 'undefined' && currentEstado ? '&estado=' + currentEstado : '' %>">Siguiente</a>
                                    </li>
                                </ul>
                            </nav>
                        <% } %>
                        
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <div>
                                Mostrando <%= ordenes.length %> de <%= pagination ? pagination.total : ordenes.length %> órdenes
                            </div>
                            <div>
                                <form class="d-flex" action="/ordenes" method="GET">
                                    <select class="form-select form-select-sm me-2" name="limit" onchange="this.form.submit()">
                                        <option value="10" <%= pagination && pagination.limit === 10 ? 'selected' : '' %>>10 por página</option>
                                        <option value="25" <%= pagination && pagination.limit === 25 ? 'selected' : '' %>>25 por página</option>
                                        <option value="50" <%= pagination && pagination.limit === 50 ? 'selected' : '' %>>50 por página</option>
                                        <option value="100" <%= pagination && pagination.limit === 100 ? 'selected' : '' %>>100 por página</option>
                                    </select>
                                    <input type="hidden" name="page" value="1">
                                    <% if (typeof currentSearch !== 'undefined' && currentSearch) { %>
                                        <input type="hidden" name="search" value="<%= currentSearch %>">
                                    <% } %>
                                    <% if (typeof currentEstado !== 'undefined' && currentEstado) { %>
                                        <input type="hidden" name="estado" value="<%= currentEstado %>">
                                    <% } %>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col">
                <a href="/home" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Volver al panel
                </a>
            </div>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <!-- Common JS (Para funcionalidades compartidas como logout) -->
    <script src="/assets/js/common.js"></script>
    
    <!-- Custom JS for this page -->
    <script src="/assets/js/listarOrdenes.js"></script>
</body>
</html>
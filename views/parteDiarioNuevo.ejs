                                                <option value="OK">OK</option>
                                                <option value="No OK">Bajo</option>
                                                <option value="N/A">N/A</option>
                                            </select>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="nivelLiqHidraulicoD1" class="form-label">Nivel líq. hidráulico D1</label>
                                            <select class="form-select" id="nivelLiqHidraulicoD1" name="datosControl.nivelLiqHidraulicoD1">
                                                <option value="OK">OK</option>
                                                <option value="Bajo">Bajo</option>
                                                <option value="N/A">N/A</option>
                                            </select>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="temperaturaLiqHidT1" class="form-label">Temperatura líq. hid. T1</label>
                                            <div class="input-group">
                                                <input type="number" class="form-control" id="temperaturaLiqHidT1" name="datosControl.temperaturaLiqHidT1" step="0.1">
                                                <span class="input-group-text">°C</span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="temperaturaSalidaG1" class="form-label">Temperatura salida G1</label>
                                            <div class="input-group">
                                                <input type="number" class="form-control" id="temperaturaSalidaG1" name="datosControl.temperaturaSalidaG1" step="0.1">
                                                <span class="input-group-text">°C</span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="temperaturaSalidaG2" class="form-label">Temperatura salida G2</label>
                                            <div class="input-group">
                                                <input type="number" class="form-control" id="temperaturaSalidaG2" name="datosControl.temperaturaSalidaG2" step="0.1">

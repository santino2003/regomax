<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Regomax</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <!-- Custom styles -->
    <link rel="stylesheet" href="/assets/css/home.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/home">
                <img src="/assets/img/regomax.png" alt="Regomax Logo" class="bg-white rounded p-1">
                <span class="ms-2 fw-bold">Regomax S.A.</span>
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item user-welcome me-3">
                        <span class="text-light">BIENVENIDO/A, <b><%= username %></b></span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-globe me-1"></i> Ver sitio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-key me-1"></i> Cambiar contraseña</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" id="logout-link"><i class="bi bi-box-arrow-right me-1"></i> Cerrar sesión</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container my-4">
        <div class="row">
            <div class="col-lg-12">
                <div class="menu-container p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="menu-heading mb-0">
                            <i class="bi bi-truck me-2"></i>Despacho de Bolsones
                        </h4>
                        <a href="/home" id="btnVolver" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Volver
                        </a>
                        
                        <!-- Script para manejar el botón volver -->
                        <script>
                            document.addEventListener('DOMContentLoaded', function() {
                                var btnVolver = document.getElementById('btnVolver');
                                // Si existe un referrer (la página anterior), usamos eso
                                if (document.referrer && document.referrer !== '') {
                                    btnVolver.href = document.referrer;
                                }
                                // En caso contrario, nos quedamos con el href="/home" predeterminado
                            });
                        </script>
                    </div>
                    
                    <!-- Alert para mensajes -->
                    <div id="alertContainer"></div>
                    
                    <!-- Formulario de despacho -->
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="card">
                                <div class="card-header bg-light">
                                    <h5 class="card-title mb-0"><i class="bi bi-clipboard-check me-2"></i>Orden de Venta</h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label for="ordenSelect" class="form-label">Seleccionar Orden</label>
                                        <select class="form-select" id="ordenSelect" required>
                                            <option value="" selected disabled>Seleccione una orden...</option>
                                            <% if (ordenes && ordenes.length > 0) { %>
                                                <% ordenes.forEach(orden => { %>
                                                    <option value="<%= orden.id %>" data-cliente="<%= orden.cliente_final %>">
                                                        #OV-<%= orden.id %> - <%= orden.cliente_final %> (<%= new Date(orden.fecha).toLocaleDateString() %>)
                                                    </option>
                                                <% }); %>
                                            <% } else { %>
                                                <option value="" disabled>No hay órdenes disponibles</option>
                                            <% } %>
                                        </select>
                                    </div>
                                    
                                    <!-- Info de la orden seleccionada -->
                                    <div id="ordenInfo" class="border p-3 rounded mb-3" style="display: none;">
                                        <h6 class="fw-bold">Detalles de la Orden:</h6>
                                        <div id="ordenDetalles"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-4">
                            <div class="card">
                                <div class="card-header bg-light">
                                    <h5 class="card-title mb-0"><i class="bi bi-upc-scan me-2"></i>Escanear Bolsones</h5>
                                </div>
                                <div class="card-body">
                                    <p class="text-muted mb-3">
                                        Utilice el escáner para leer los códigos de barras de los bolsones a despachar.
                                        El sistema agregará automáticamente cada código escaneado.
                                    </p>
                                    <div class="mb-3">
                                        <label for="codigoBolson" class="form-label">Código de Bolsón</label>
                                        <div class="input-group">
                                            <input type="text" class="form-control" id="codigoBolson" 
                                                   placeholder="Escanee o ingrese el código..." autocomplete="off">
                                            <button class="btn btn-outline-secondary" type="button" id="btnAgregarManual">
                                                <i class="bi bi-plus-circle"></i>
                                            </button>
                                        </div>
                                        <div class="form-text">El código será procesado automáticamente cuando se presione Enter.</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Tabla de bolsones escaneados -->
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header bg-light">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h5 class="card-title mb-0"><i class="bi bi-box-seam me-2"></i>Bolsones Escaneados</h5>
                                        <div>
                                            <span class="badge bg-primary" id="contadorBolsones">0</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Código</th>
                                                    <th>Producto</th>
                                                    <th>Peso</th>
                                                    <th>Acciones</th>
                                                </tr>
                                            </thead>
                                            <tbody id="tablaBolsones">
                                                <tr id="filaVacia">
                                                    <td colspan="5" class="text-center text-muted py-3">
                                                        <i class="bi bi-inbox me-2"></i>No hay bolsones escaneados
                                                    </td>
                                                </tr>
                                            </tbody>
                                            <tfoot id="tablaTotales" style="display: none;">
                                                <tr class="table-light">
                                                    <th colspan="3" class="text-end">Total:</th>
                                                    <th id="pesoTotal">0.00 kg</th>
                                                    <th></th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Botón de despacho y observaciones -->
                    <div class="row mt-4">
                        <div class="col-md-8">
                            <div class="form-floating mb-3">
                                <textarea class="form-control" id="observaciones" style="height: 100px"></textarea>
                                <label for="observaciones">Observaciones (opcional)</label>
                            </div>
                        </div>
                        <div class="col-md-4 d-flex align-items-center justify-content-end">
                            <button type="button" id="btnDespachar" class="btn btn-primary btn-lg" disabled>
                                <i class="bi bi-truck me-2"></i>Procesar Despacho
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Modal de error de bolsón -->
    <div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="errorModalLabel">Error al Escanear Bolsón</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p id="errorMessage"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de confirmación de despacho -->
    <div class="modal fade" id="confirmarModal" tabindex="-1" aria-labelledby="confirmarModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="confirmarModalLabel">Confirmar Despacho</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        ¿Está seguro de que desea procesar el despacho? Esta acción actualizará las cantidades de productos en la orden de venta.
                    </div>
                    <div id="resumenDespacho"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" id="btnConfirmarDespacho" class="btn btn-primary">
                        <i class="bi bi-check2-circle me-2"></i>Confirmar Despacho
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de éxito -->
    <div class="modal fade" id="exitoModal" tabindex="-1" aria-labelledby="exitoModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title" id="exitoModalLabel">Despacho Procesado</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center mb-4">
                        <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
                    </div>
                    <p class="text-center">¡El despacho ha sido procesado exitosamente!</p>
                    <div id="detalleExito"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="btnCerrarExito">Cerrar</button>
                    <a href="/despachos/orden/" class="btn btn-primary" id="btnVerDetalles">Ver Detalles</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <!-- Common JS -->
    <script src="/assets/js/common.js"></script>
    
    <!-- Custom JS for this page -->
    <script src="/assets/js/despachoNuevo.js"></script>
</body>
</html>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Regomax</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <!-- Flatpickr - Selector de fechas -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <!-- Custom styles -->
    <link rel="stylesheet" href="/assets/css/home.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/home">
                <img src="/assets/img/regomax.png" alt="Regomax Logo" class="bg-white rounded p-1">
                <span class="ms-2 fw-bold">Regomax S.A.</span>
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item user-welcome me-3">
                        <span class="text-light">BIENVENIDO/A, <b><%= username %></b></span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home"><i class="bi bi-house-door me-1"></i> Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-key me-1"></i> Cambiar contraseña</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" id="logout-link"><i class="bi bi-box-arrow-right me-1"></i> Cerrar sesión</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container my-4">
        <div class="row mb-4">
            <div class="col">
                <div class="menu-container p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="menu-heading mb-0">
                            <i class="bi bi-graph-up me-2"></i>Reporte de NFU
                        </h4>
                        
                        <div class="btn-group" role="group">
                            <a href="/reportes/planificar-mes" class="btn btn-outline-primary">
                                <i class="bi bi-calendar me-2"></i>Planificar Mes
                            </a>
                            <a href="/reportes/cargar-nfu" class="btn btn-outline-primary">
                                <i class="bi bi-truck me-2"></i>Cargar NFU
                            </a>
                        </div>
                    </div>
                    
                    <!-- Alertas -->
                    <div id="alertContainer"></div>
                    
                    <!-- Filtro de fecha -->
                    <div class="row mb-4">
                        <div class="col-md-6 mx-auto">
                            <div class="card">
                                <div class="card-header bg-light">
                                    <h5 class="card-title mb-0">
                                        <i class="bi bi-funnel me-2"></i>Seleccionar Fecha
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="row g-3">
                                        <div class="col-md-12">
                                            <label for="fechaReporte" class="form-label">Fecha de reporte</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="bi bi-calendar-date"></i></span>
                                                <input type="text" class="form-control" id="fechaReporte" name="fechaReporte" value="<%= fecha %>" required>
                                            </div>
                                            <div class="form-text">Seleccione la fecha para generar el reporte</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <% if (reporte && !reporte.error) { %>
                        <!-- Tarjetas de resumen -->
                        <div class="row mb-4">
                            <div class="col-md-4">
                                <div class="card bg-primary text-white">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="card-title mb-0">Ingreso del día</h6>
                                                <p class="display-6 mb-0">
                                                    <% 
                                                        const datoDelDia = reporte.datosNFU.find(d => d.fecha === fecha);
                                                        const cantidadDia = datoDelDia ? parseFloat(datoDelDia.cantidad) : 0;
                                                    %>
                                                    <%= cantidadDia.toFixed(2) %> kg
                                                </p>
                                            </div>
                                            <i class="bi bi-truck display-4"></i>
                                        </div>
                                        <div class="text-white-50 small mt-2">
                                            <%= new Date(fecha).toLocaleDateString('es-ES', {weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'}) %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-4">
                                <div class="card bg-success text-white">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="card-title mb-0">Total acumulado</h6>
                                                <p class="display-6 mb-0">
                                                    <%= reporte.totalAcumulado.toFixed(2) %> kg
                                                </p>
                                            </div>
                                            <i class="bi bi-stack display-4"></i>
                                        </div>
                                        <div class="text-white-50 small mt-2">
                                            <%= reporte.diasHabilesTranscurridos %> días hábiles transcurridos de <%= reporte.diasHabilesTotal %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-4">
                                <div class="card bg-info text-white">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="card-title mb-0">Proyección mensual</h6>
                                                <p class="display-6 mb-0">
                                                    <%= reporte.proyeccion.toFixed(2) %> kg
                                                </p>
                                            </div>
                                            <i class="bi bi-graph-up-arrow display-4"></i>
                                        </div>
                                        <div class="text-white-50 small mt-2">
                                            <% 
                                                const porcentajeCumplimiento = (reporte.totalAcumulado / reporte.proyeccion) * 100;
                                                const porcentajeFormateado = isNaN(porcentajeCumplimiento) ? 0 : porcentajeCumplimiento;
                                            %>
                                            <%= porcentajeFormateado.toFixed(1) %>% de cumplimiento
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Gráfico -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header bg-light">
                                        <h5 class="card-title mb-0">
                                            <i class="bi bi-bar-chart me-2"></i>Ingresos diarios de NFU
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <canvas id="nfuChart"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Tabla de datos -->
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header bg-light">
                                        <h5 class="card-title mb-0">
                                            <i class="bi bi-table me-2"></i>Detalles diarios
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>Fecha</th>
                                                        <th>Cantidad (kg)</th>
                                                        <th>Acumulado (kg)</th>
                                                        <th>Día hábil</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% 
                                                        // Ordenar por fecha
                                                        const datosFechaOrdenados = reporte.datosNFU.slice().sort((a, b) => new Date(a.fecha) - new Date(b.fecha));
                                                        
                                                        let acumulado = 0;
                                                    %>
                                                    
                                                    <% datosFechaOrdenados.forEach(dato => { 
                                                        const fechaDato = new Date(dato.fecha);
                                                        acumulado += parseFloat(dato.cantidad);
                                                        
                                                        // Verificar si la fecha está dentro de los días hábiles
                                                        const esDiaHabil = reporte.diasHabilesTotal > 0 && fechaDato <= new Date(fecha);
                                                    %>
                                                        <tr <%= dato.fecha === fecha ? 'class="table-primary"' : '' %>>
                                                            <td>
                                                                <%= fechaDato.toLocaleDateString('es-ES', {weekday: 'short', year: 'numeric', month: 'short', day: 'numeric'}) %>
                                                            </td>
                                                            <td class="text-end"><%= parseFloat(dato.cantidad).toFixed(2) %></td>
                                                            <td class="text-end"><%= acumulado.toFixed(2) %></td>
                                                            <td>
                                                                <% if (esDiaHabil) { %>
                                                                    <span class="badge bg-success">Sí</span>
                                                                <% } else { %>
                                                                    <span class="badge bg-secondary">No</span>
                                                                <% } %>
                                                            </td>
                                                        </tr>
                                                    <% }); %>
                                                    
                                                    <% if (datosFechaOrdenados.length === 0) { %>
                                                        <tr>
                                                            <td colspan="4" class="text-center">No hay datos registrados para este mes</td>
                                                        </tr>
                                                    <% } %>
                                                </tbody>
                                                <tfoot>
                                                    <tr class="table-dark">
                                                        <th>Total</th>
                                                        <th class="text-end"><%= reporte.totalAcumulado.toFixed(2) %></th>
                                                        <th></th>
                                                        <th><%= reporte.diasHabilesTranscurridos %> días</th>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } else { %>
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <% if (reporte && reporte.error) { %>
                                <%= reporte.error %>
                            <% } else { %>
                                No hay datos disponibles para generar el reporte.
                            <% } %>
                            <hr>
                            <p class="mb-0">Asegúrese de haber configurado los días hábiles en el módulo de planificación y de haber ingresado datos de NFU.</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col">
                <a href="/home" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Volver al panel
                </a>
            </div>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <!-- Flatpickr JS -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://npmcdn.com/flatpickr/dist/l10n/es.js"></script>
    
    <!-- Common JS -->
    <script src="/assets/js/common.js"></script>
    
    <!-- Custom JS for this page -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Inicializar selector de fecha
            const fechaPicker = flatpickr("#fechaReporte", {
                dateFormat: "Y-m-d",
                locale: "es",
                altInput: true,
                altFormat: "d/m/Y",
                maxDate: "today",
                onChange: function(selectedDates, dateStr, instance) {
                    // Redirigir a la misma página con la fecha seleccionada como parámetro
                    if (dateStr) {
                        window.location.href = `/reportes/ver?fecha=${dateStr}`;
                    }
                }
            });
            
            <% if (reporte && !reporte.error && reporte.datosNFU && reporte.datosNFU.length > 0) { %>
            // Inicializar el gráfico
            const ctx = document.getElementById('nfuChart').getContext('2d');
            
            // Preparar datos para el gráfico
            const datos = <%= JSON.stringify(reporte.datosNFU) %>;
            
            // Ordenar por fecha
            datos.sort((a, b) => new Date(a.fecha) - new Date(b.fecha));
            
            const labels = datos.map(d => {
                const fecha = new Date(d.fecha);
                return fecha.toLocaleDateString('es-ES', {day: '2-digit', month: 'short'});
            });
            
            const cantidades = datos.map(d => parseFloat(d.cantidad));
            
            // Calcular acumulados
            let acumulados = [];
            let acum = 0;
            for (let i = 0; i < cantidades.length; i++) {
                acum += cantidades[i];
                acumulados.push(acum);
            }
            
            // Crear el gráfico
            const myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'NFU diario (kg)',
                            data: cantidades,
                            backgroundColor: 'rgba(54, 162, 235, 0.7)',
                            borderColor: 'rgba(54, 162, 235, 1)',
                            borderWidth: 1
                        },
                        {
                            label: 'Acumulado (kg)',
                            data: acumulados,
                            type: 'line',
                            borderColor: 'rgba(255, 99, 132, 1)',
                            backgroundColor: 'rgba(255, 99, 132, 0.2)',
                            pointBackgroundColor: 'rgba(255, 99, 132, 1)',
                            pointRadius: 4,
                            fill: true
                        }
                    ]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Kilogramos (kg)'
                            }
                        },
                        x: {
                            title: {
                                display: true,
                                text: 'Fecha'
                            }
                        }
                    },
                    interaction: {
                        intersect: false,
                        mode: 'index'
                    },
                    plugins: {
                        tooltip: {
                            callbacks: {
                                title: function(context) {
                                    const index = context[0].dataIndex;
                                    const fecha = new Date(datos[index].fecha);
                                    return fecha.toLocaleDateString('es-ES', {weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'});
                                }
                            }
                        }
                    }
                }
            });
            <% } %>
        });
    </script>
</body>
</html>
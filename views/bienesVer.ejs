<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ver Bien - Regomax</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/assets/css/home.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/home">
                <img src="/assets/img/regomax.png" alt="Regomax Logo" class="bg-white rounded p-1">
                <span class="ms-2 fw-bold">Regomax S.A.</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item user-welcome me-3">
                        <span class="text-light">BIENVENIDO/A, <b><%= username %></b></span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-globe me-1"></i> Ver sitio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" id="logout-link"><i class="bi bi-box-arrow-right me-1"></i> Cerrar sesión</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid my-4">
        <div class="row mb-4">
            <div class="col">
                <div class="menu-container p-4" id="bienDetails" data-bien-id="<%= bien.id %>">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="menu-heading mb-0">
                            <i class="bi bi-box-seam me-2"></i>Detalles del Bien
                        </h4>
                        <div>
                            <a href="/bienes/editar/<%= bien.id %>" class="btn btn-warning">
                                <i class="bi bi-pencil me-2"></i>Editar
                            </a>
                            <button type="button" onclick="imprimirCodigo('<%= bien.barcodeBase64 %>', '<%= bien.codigo %>')" class="btn btn-primary ms-2">
                                <i class="bi bi-printer me-2"></i>Imprimir Código
                            </button>
                            <a href="/bienes" class="btn btn-outline-secondary ms-2">
                                <i class="bi bi-arrow-left me-2"></i>Volver
                            </a>
                        </div>
                    </div>

                    <div id="alertPlaceholder"></div>

                    <!-- Información Básica -->
                    <div class="card mb-3 shadow-sm">
                        <div class="card-header" style="background-color: #17a2b8; color: white;">
                            <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Información Básica</h5>
                        </div>
                        <div class="card-body bg-light">
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <label class="text-muted small mb-1">Código</label>
                                    <div class="fw-bold fs-5 text-info"><%= bien.codigo %></div>
                                </div>
                                <div class="col-md-5">
                                    <label class="text-muted small mb-1">Nombre</label>
                                    <div class="fw-bold fs-5"><%= bien.nombre %></div>
                                </div>
                                <div class="col-md-2">
                                    <label class="text-muted small mb-1">Tipo</label>
                                    <div>
                                        <span class="badge <%= bien.tipo === 'Uso' ? 'bg-info' : 'bg-warning' %> fs-6">
                                            <%= bien.tipo %>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <label class="text-muted small mb-1">Stock</label>
                                    <div class="fs-4 <%= bien.cantidad_critica && bien.cantidad_stock <= bien.cantidad_critica ? 'text-danger' : 'text-info' %> fw-bold">
                                        <% 
                                        // Formatear cantidad: si es entero mostrar sin decimales, si tiene decimales mostrarlos
                                        const stock = parseFloat(bien.cantidad_stock);
                                        const stockFormateado = stock % 1 === 0 ? stock.toString() : stock.toFixed(2).replace(/\.?0+$/, '');
                                        %>
                                        <%= stockFormateado %>
                                        <% if (bien.cantidad_critica && bien.cantidad_stock <= bien.cantidad_critica) { %>
                                        <i class="bi bi-exclamation-triangle-fill" title="Stock crítico"></i>
                                        <% } %>
                                    </div>
                                </div>
                                <% if (bien.descripcion) { %>
                                <div class="col-12">
                                    <label class="text-muted small mb-1">Descripción</label>
                                    <div class="p-2 bg-white rounded border"><%= bien.descripcion %></div>
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <!-- Clasificación -->
                    <div class="card mb-3 shadow-sm">
                        <div class="card-header" style="background-color: #5bc0de; color: white;">
                            <h6 class="mb-0"><i class="bi bi-tags me-2"></i>Clasificación</h6>
                        </div>
                        <div class="card-body bg-light">
                            <div class="row">
                                <div class="col-md-6 mb-2">
                                    <label class="text-muted small">Categoría</label>
                                    <div><%= bien.categoria_nombre || 'Sin categoría' %></div>
                                </div>
                                <div class="col-md-6">
                                    <label class="text-muted small">Familia</label>
                                    <div><%= bien.familia_nombre || 'Sin familia' %></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Inventario -->
                    <div class="card mb-3 shadow-sm">
                        <div class="card-header" style="background-color: #17a2b8; color: white;">
                            <h6 class="mb-0"><i class="bi bi-box-seam me-2"></i>Inventario</h6>
                        </div>
                        <div class="card-body bg-light">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label class="text-muted small">Unidad de Medida</label>
                                    <div class="fw-semibold"><%= bien.unidad_medida_nombre_lindo || bien.unidad_medida_nombre || 'No especificado' %></div>
                                </div>
                                <div class="col-md-4">
                                    <label class="text-muted small">Precio Unitario</label>
                                    <div class="fs-5 text-info fw-bold">
                                        $<%= parseFloat(bien.precio || 0).toLocaleString('es-AR', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %>
                                    </div>
                                </div>
                                <% if (bien.cantidad_critica) { %>
                                <div class="col-md-4">
                                    <label class="text-muted small">Stock Crítico</label>
                                    <div class="text-warning fw-bold">
                                        <i class="bi bi-exclamation-circle me-1"></i><%= bien.cantidad_critica %> unidades
                                    </div>
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <!-- Ubicación -->
                    <div class="card mb-3 shadow-sm">
                        <div class="card-header" style="background-color: #5bc0de; color: white;">
                            <h6 class="mb-0"><i class="bi bi-geo-alt me-2"></i>Ubicación y Almacén</h6>
                        </div>
                        <div class="card-body bg-light">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="text-muted small">Ubicación</label>
                                    <div><%= bien.ubicacion || 'No especificado' %></div>
                                </div>
                                <div class="col-md-6">
                                    <label class="text-muted small">Almacén por Defecto</label>
                                    <div><%= bien.almacen_nombre || 'No especificado' %></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Proveedores -->
                    <div class="card mb-3 shadow-sm">
                        <div class="card-header" style="background-color: #17a2b8; color: white;">
                            <h6 class="mb-0"><i class="bi bi-truck me-2"></i>Proveedores</h6>
                        </div>
                        <div class="card-body bg-light">
                            <% if (bien.proveedores && bien.proveedores.length > 0) { %>
                            <div class="list-group list-group-flush">
                                <% bien.proveedores.forEach(prov => { %>
                                <div class="list-group-item px-0 bg-transparent">
                                    <div class="fw-semibold"><%= prov.nombre %></div>
                                    <% if (prov.telefono || prov.email) { %>
                                    <small class="text-muted">
                                        <% if (prov.telefono) { %>
                                        <i class="bi bi-telephone me-1"></i><%= prov.telefono %>
                                        <% } %>
                                        <% if (prov.email) { %>
                                        <i class="bi bi-envelope ms-2 me-1"></i><%= prov.email %>
                                        <% } %>
                                    </small>
                                    <% } %>
                                </div>
                                <% }) %>
                            </div>
                            <% } else { %>
                            <p class="text-muted text-center mb-0 py-3">
                                <i class="bi bi-inbox me-2"></i>No hay proveedores asociados
                            </p>
                            <% } %>
                        </div>
                    </div>

                    <!-- Archivos Adjuntos -->
                    <div class="card mb-3 shadow-sm">
                        <div class="card-header d-flex justify-content-between align-items-center" style="background-color: #5bc0de; color: white;">
                            <h6 class="mb-0"><i class="bi bi-paperclip me-2"></i>Archivos Adjuntos</h6>
                            <button class="btn btn-sm btn-light" id="btnSubirArchivo">
                                <i class="bi bi-upload me-1"></i>Subir
                            </button>
                        </div>
                        <div class="card-body bg-light">
                            <div id="listaArchivos">
                                <% if (bien.archivos && bien.archivos.length > 0) { %>
                                <div class="list-group list-group-flush">
                                    <% bien.archivos.forEach(archivo => { %>
                                    <div class="list-group-item px-0 d-flex justify-content-between align-items-center bg-transparent">
                                        <div class="flex-grow-1">
                                            <i class="bi <%= archivo.tipo_mime.includes('image') ? 'bi-file-image text-info' : archivo.tipo_mime.includes('pdf') ? 'bi-file-pdf text-danger' : 'bi-file-earmark text-secondary' %> me-2 fs-5"></i>
                                            <span class="fw-semibold"><%= archivo.nombre_archivo %></span>
                                            <br>
                                            <small class="text-muted ms-4">
                                                <%= (archivo.tamanio / 1024).toFixed(2) %> KB
                                            </small>
                                        </div>
                                        <div class="btn-group">
                                            <a href="/<%= archivo.ruta_archivo %>" target="_blank" class="btn btn-sm btn-outline-info" title="Ver/Descargar">
                                                <i class="bi bi-download"></i>
                                            </a>
                                            <button class="btn btn-sm btn-outline-danger" onclick="eliminarArchivo(<%= archivo.id %>, '<%= archivo.nombre_archivo.replace(/'/g, "\\'") %>')" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <% }) %>
                                </div>
                                <% } else { %>
                                <p class="text-muted text-center mb-0 py-3">
                                    <i class="bi bi-inbox me-2"></i>No hay archivos adjuntos
                                </p>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <!-- Metadata -->
                    <div class="card shadow-sm">
                        <div class="card-body" style="background-color: #e7f7f9;">
                            <small class="text-muted">
                                <i class="bi bi-person me-1"></i><strong>Creado por:</strong> <%= bien.responsable %><br>
                                <i class="bi bi-calendar me-1"></i><strong>Fecha:</strong> <%= new Date(bien.fecha_creacion).toLocaleString('es-AR', { dateStyle: 'long', timeStyle: 'short' }) %>
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Subir Archivo -->
    <div class="modal fade" id="modalArchivo" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Subir Archivo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="formArchivo">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="archivo" class="form-label">Seleccionar Archivo</label>
                            <input type="file" class="form-control" id="archivo" name="archivo" required>
                            <small class="text-muted">Máximo 10 MB. Formatos: imágenes, PDF, documentos de Office</small>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Subir</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/assets/js/common.js"></script>
    <script src="/assets/js/bienesVer.js"></script>
</body>
</html>

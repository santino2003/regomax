<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titulo %> - Regomax</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <!-- Custom styles -->
    <link rel="stylesheet" href="/assets/css/home.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/home">
                <img src="/assets/img/regomax.png" alt="Regomax Logo" class="bg-white rounded p-1">
                <span class="ms-2 fw-bold">Regomax S.A.</span>
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item user-welcome me-3">
                        <span class="text-light">BIENVENIDO/A, <b><%= usuario.username %></b></span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-globe me-1"></i> Ver sitio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" id="logout-link"><i class="bi bi-box-arrow-right me-1"></i> Cerrar sesión</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container my-4">
        <div class="row mb-4">
            <div class="col">
                <div class="menu-container p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="menu-heading mb-0">
                            <i class="bi bi-recycle me-2"></i>Registrar Ingreso de Neumáticos Fuera de Uso (NFU)
                        </h4>
                    </div>
                    
                    <div class="card mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">Datos del ingreso de NFU</h5>
                        </div>
                        <div class="card-body">
                            <form id="formNuevoNFU">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="fecha" class="form-label">Fecha de ingreso</label>
                                            <input type="date" class="form-control" id="fecha" name="fecha" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="cantidad" class="form-label">Cantidad (kg)</label>
                                            <input type="number" class="form-control" id="cantidad" name="cantidad" step="0.01" min="0.01" required>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row mt-3">
                                    <div class="col-12">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="bi bi-save me-2"></i>Guardar Ingreso
                                        </button>
                                        <a href="/reporte-general" class="btn btn-secondary ms-2">
                                            <i class="bi bi-x-circle me-2"></i>Cancelar
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        El ingreso quedará registrado a nombre de <strong><%= usuario.username %></strong>.
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col">
                <a href="/reporte-general" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Volver al reporte
                </a>
            </div>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Common JS (Para funcionalidades compartidas como logout) -->
    <script src="/assets/js/common.js"></script>
    
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Establecer fecha actual por defecto con la zona horaria de Buenos Aires
        function setFechaActualBA() {
            const options = { year: 'numeric', month: '2-digit', day: '2-digit', timeZone: 'America/Argentina/Buenos_Aires' };
            const today = new Date();
            const fechaBA = today.toLocaleDateString('es-AR', options).split('/').reverse().join('-');
            document.getElementById('fecha').value = fechaBA;
        }
        
        setFechaActualBA();
        
        console.log('Formulario NFU inicializado');
        
        // Manejar envío del formulario
        document.getElementById('formNuevoNFU').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            console.log('Formulario enviado');
            
            const fecha = document.getElementById('fecha').value;
            const cantidad = document.getElementById('cantidad').value;
            
            console.log('Datos del formulario:', { fecha, cantidad });
            
            if (!fecha || !cantidad) {
                alert('Por favor complete todos los campos');
                return;
            }
            
            try {
                console.log('Enviando solicitud a /api/nfu');
                
                const response = await fetch('/api/nfu', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify({
                        fecha,
                        cantidad: Number(cantidad)
                    }),
                    credentials: 'same-origin' // Asegura que las cookies se envíen
                });
                
                console.log('Respuesta recibida:', response.status);
                
                if (!response.ok) {
                    // Si la respuesta no es exitosa, verificamos si es un problema de autenticación
                    if (response.status === 401) {
                        alert('Tu sesión ha expirado. Por favor vuelve a iniciar sesión.');
                        window.location.href = '/login';
                        return;
                    }
                }
                
                const data = await response.json();
                console.log('Datos de la respuesta:', data);
                
                if (data.success) {
                    alert('Ingreso de NFU registrado correctamente');
                    window.location.href = '/reporte-general';
                } else {
                    alert('Error: ' + (data.mensaje || 'Ocurrió un error al registrar el ingreso'));
                }
            } catch (error) {
                console.error('Error detallado:', error);
                alert('Error al procesar la solicitud. Verifica la consola para más detalles.');
            }
        });
    });
    </script>
</body>
</html>
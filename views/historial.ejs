<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Historial de Acciones - Regomax</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <!-- Custom styles -->
    <link rel="stylesheet" href="/assets/css/home.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/home">
                <img src="/assets/img/regomax.png" alt="Regomax Logo" class="bg-white rounded p-1">
                <span class="ms-2 fw-bold">Regomax S.A.</span>
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item user-welcome me-3">
                        <span class="text-light">BIENVENIDO/A, <b><%= username %></b></span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home"><i class="bi bi-house-door me-1"></i> Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-key me-1"></i> Cambiar contraseña</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" id="logout-link"><i class="bi bi-box-arrow-right me-1"></i> Cerrar sesión</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container my-4">
        <div class="row mb-4">
            <div class="col">
                <div class="menu-container p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="menu-heading mb-0">
                            <i class="bi bi-clock-history me-2"></i>Historial de Acciones
                        </h4>
                        <div>
                            <a href="/api/historial/exportar" class="btn btn-success">
                                <i class="bi bi-file-earmark-excel me-1"></i> Exportar CSV
                            </a>
                        </div>
                    </div>

                    <!-- Filtros -->
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Filtros</h5>
                        </div>
                        <div class="card-body">
                            <form id="filtrosForm" method="GET" action="/historial">
                                <div class="row">
                                    <div class="col-md-3 mb-3">
                                        <label for="usuario" class="form-label">Usuario</label>
                                        <input type="text" class="form-control" id="usuario" name="usuario" 
                                            value="<%= filtros.usuario || '' %>" placeholder="Nombre de usuario">
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label for="accion" class="form-label">Acción</label>
                                        <select class="form-select" id="accion" name="accion">
                                            <option value="">Todas las acciones</option>
                                            <option value="crear" <%= filtros.accion === 'crear' ? 'selected' : '' %>>Crear</option>
                                            <option value="editar" <%= filtros.accion === 'editar' ? 'selected' : '' %>>Editar</option>
                                            <option value="eliminar" <%= filtros.accion === 'eliminar' ? 'selected' : '' %>>Eliminar</option>
                                            <option value="consultar" <%= filtros.accion === 'consultar' ? 'selected' : '' %>>Consultar</option>
                                            <option value="login" <%= filtros.accion === 'login' ? 'selected' : '' %>>Inicio de sesión</option>
                                            <option value="logout" <%= filtros.accion === 'logout' ? 'selected' : '' %>>Cierre de sesión</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label for="entidad" class="form-label">Entidad</label>
                                        <select class="form-select" id="entidad" name="entidad">
                                            <option value="">Todas las entidades</option>
                                            <option value="bolson" <%= filtros.entidad === 'bolson' ? 'selected' : '' %>>Bolsón</option>
                                            <option value="orden_venta" <%= filtros.entidad === 'orden_venta' ? 'selected' : '' %>>Orden de Venta</option>
                                            <option value="parte_diario" <%= filtros.entidad === 'parte_diario' ? 'selected' : '' %>>Parte Diario</option>
                                            <option value="despacho" <%= filtros.entidad === 'despacho' ? 'selected' : '' %>>Despacho</option>
                                            <option value="usuario" <%= filtros.entidad === 'usuario' ? 'selected' : '' %>>Usuario</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label for="fechaDesde" class="form-label">Fecha Desde</label>
                                        <input type="date" class="form-control" id="fechaDesde" name="fechaDesde" 
                                            value="<%= filtros.fechaDesde || '' %>">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3 mb-3">
                                        <label for="fechaHasta" class="form-label">Fecha Hasta</label>
                                        <input type="date" class="form-control" id="fechaHasta" name="fechaHasta" 
                                            value="<%= filtros.fechaHasta || '' %>">
                                    </div>
                                    <div class="col-md-9 d-flex align-items-end mb-3">
                                        <div class="d-flex gap-2">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="bi bi-filter me-1"></i> Filtrar
                                            </button>
                                            <button type="button" id="btnLimpiarFiltros" class="btn btn-outline-secondary">
                                                <i class="bi bi-x-circle me-1"></i> Limpiar Filtros
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Tabla de historial -->
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Fecha y Hora</th>
                                    <th>Usuario</th>
                                    <th>Acción</th>
                                    <th>Entidad</th>
                                    <th>Detalles</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (historial && historial.length > 0) { %>
                                    <% historial.forEach(item => { %>
                                        <tr>
                                            <td><%= item.id %></td>
                                            <td><%= new Date(item.fecha_hora).toLocaleString() %></td>
                                            <td><%= item.usuario %></td>
                                            <td>
                                                <% if (item.accion === 'crear') { %>
                                                    <span class="badge bg-success">Crear</span>
                                                <% } else if (item.accion === 'editar') { %>
                                                    <span class="badge bg-warning">Editar</span>
                                                <% } else if (item.accion === 'eliminar') { %>
                                                    <span class="badge bg-danger">Eliminar</span>
                                                <% } else if (item.accion === 'consultar') { %>
                                                    <span class="badge bg-info">Consultar</span>
                                                <% } else if (item.accion === 'login') { %>
                                                    <span class="badge bg-primary">Login</span>
                                                <% } else if (item.accion === 'logout') { %>
                                                    <span class="badge bg-secondary">Logout</span>
                                                <% } else { %>
                                                    <span class="badge bg-dark"><%= item.accion %></span>
                                                <% } %>
                                            </td>
                                            <td><%= item.entidad.replace(/_/g, ' ') %></td>
                                            <td>
                                                <% if (item.detalles) { %>
                                                    <button type="button" class="btn btn-sm btn-outline-info btnVerDetalles" 
                                                            data-bs-toggle="modal" data-bs-target="#detallesModal"
                                                            data-detalles="<%= JSON.stringify(item.detalles).replace(/"/g, '&quot;') %>">
                                                        <i class="bi bi-eye"></i>
                                                    </button>
                                                <% } else { %>
                                                    -
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="6" class="text-center py-4">
                                            <i class="bi bi-info-circle me-2"></i> No se encontraron registros en el historial
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Paginación -->
                    <% if (pagination && pagination.totalPages > 1) { %>
                        <nav aria-label="Navegación de historial">
                            <ul class="pagination justify-content-center mb-0 mt-3">
                                <li class="page-item <%= pagination.page === 1 ? 'disabled' : '' %>">
                                    <a class="page-link" href="<%= pagination.page === 1 ? '#' : `/historial?page=${pagination.page - 1}` %>">
                                        Anterior
                                    </a>
                                </li>
                                
                                <% 
                                let startPage = Math.max(1, pagination.page - 2);
                                let endPage = Math.min(pagination.totalPages, pagination.page + 2);
                                
                                if (startPage > 1) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="/historial?page=1">1</a>
                                    </li>
                                    <% if (startPage > 2) { %>
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    <% } %>
                                <% } %>
                                
                                <% for (let i = startPage; i <= endPage; i++) { %>
                                    <li class="page-item <%= pagination.page === i ? 'active' : '' %>">
                                        <a class="page-link" href="/historial?page=<%= i %>"><%= i %></a>
                                    </li>
                                <% } %>
                                
                                <% if (endPage < pagination.totalPages) { %>
                                    <% if (endPage < pagination.totalPages - 1) { %>
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    <% } %>
                                    <li class="page-item">
                                        <a class="page-link" href="/historial?page=<%= pagination.totalPages %>">
                                            <%= pagination.totalPages %>
                                        </a>
                                    </li>
                                <% } %>
                                
                                <li class="page-item <%= pagination.page === pagination.totalPages ? 'disabled' : '' %>">
                                    <a class="page-link" href="<%= pagination.page === pagination.totalPages ? '#' : `/historial?page=${pagination.page + 1}` %>">
                                        Siguiente
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    <% } %>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col">
                <a href="/home" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Volver al panel
                </a>
            </div>
        </div>
    </div>

    <!-- Modal para mostrar detalles -->
    <div class="modal fade" id="detallesModal" tabindex="-1" aria-labelledby="detallesModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="detallesModalLabel">Detalles de la acción</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <pre id="detallesJSON" class="bg-light p-3 rounded"></pre>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Common JS (Para funcionalidades compartidas como logout) -->
    <script src="/assets/js/common.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Manejar clic en botones de ver detalles
            document.querySelectorAll('.btnVerDetalles').forEach(button => {
                button.addEventListener('click', function() {
                    const detalles = this.getAttribute('data-detalles');
                    try {
                        const detallesObj = JSON.parse(detalles);
                        document.getElementById('detallesJSON').textContent = JSON.stringify(detallesObj, null, 2);
                    } catch (e) {
                        document.getElementById('detallesJSON').textContent = detalles || 'No hay detalles disponibles';
                    }
                });
            });
            
            // Manejar botón limpiar filtros
            document.getElementById('btnLimpiarFiltros').addEventListener('click', function() {
                document.getElementById('usuario').value = '';
                document.getElementById('accion').value = '';
                document.getElementById('entidad').value = '';
                document.getElementById('fechaDesde').value = '';
                document.getElementById('fechaHasta').value = '';
                
                // Enviar el formulario para aplicar la limpieza
                document.getElementById('filtrosForm').submit();
            });
        });
    </script>
</body>
</html>
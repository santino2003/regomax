    <!-- Script para gestión de permisos de transición -->
    <script>
        const token = localStorage.getItem('token');
        const estadosOC = ['Abierta', 'Revision', 'Aprobada', 'En Proceso', 'Entregado', 'Cerrada'];
        let usuariosData = [];
        let usuarioSeleccionado = null;

        // Cargar usuarios al abrir el modal
        $('#modalPermisosTransicion').on('show.bs.modal', function() {
            cargarUsuarios();
        });

        // Función para cargar todos los usuarios
        function cargarUsuarios() {
            $.ajax({
                url: '/api/permisos-transiciones/listado',
                method: 'GET',
                headers: { 'Authorization': `Bearer ${token}` },
                success: function(response) {
                    if (response.success) {
                        usuariosData = response.data;
                        const select = $('#selectUsuario');
                        select.empty();
                        select.append('<option value="">-- Seleccione un usuario --</option>');
                        
                        usuariosData.forEach(user => {
                            const roleLabel = user.role === 'admin' ? ' (Admin)' : '';
                            select.append(`<option value="${user.username}">${user.username}${roleLabel}</option>`);
                        });
                    }
                },
                error: function(xhr) {
                    mostrarAlerta('Error al cargar usuarios', 'danger');
                }
            });
        }

        // Al seleccionar un usuario
        $('#selectUsuario').on('change', function() {
            const username = $(this).val();
            if (!username) {
                $('#matrizPermisos').hide();
                $('#mensajeSinSeleccion').show();
                usuarioSeleccionado = null;
                return;
            }

            usuarioSeleccionado = usuariosData.find(u => u.username === username);
            if (usuarioSeleccionado) {
                if (usuarioSeleccionado.role === 'admin') {
                    $('#matrizPermisos').hide();
                    $('#mensajeSinSeleccion').html(`
                        <i class="bi bi-shield-check" style="font-size: 3rem; color: #198754;"></i>
                        <p class="mt-3"><strong>${username}</strong> es administrador y tiene acceso completo a todas las transiciones automáticamente.</p>
                    `).show();
                } else {
                    mostrarMatrizPermisos(usuarioSeleccionado);
                    $('#mensajeSinSeleccion').hide();
                    $('#matrizPermisos').show();
                }
            }
        });

        // Función para mostrar la matriz de permisos
        function mostrarMatrizPermisos(usuario) {
            const tbody = $('#tablaTransiciones');
            tbody.empty();

            const permisos = usuario.permisos_transiciones_oc || [];
            
            // Generar todas las posibles transiciones
            const transiciones = [];
            for (let i = 0; i < estadosOC.length; i++) {
                for (let j = 0; j < estadosOC.length; j++) {
                    if (i !== j) { // No permitir transición al mismo estado
                        const desde = estadosOC[i];
                        const hacia = estadosOC[j];
                        const tienePermiso = permisos.some(p => p.desde === desde && p.hacia === hacia);
                        
                        transiciones.push({
                            desde: desde,
                            hacia: hacia,
                            permitido: tienePermiso
                        });
                    }
                }
            }

            // Renderizar las transiciones
            transiciones.forEach((trans, index) => {
                const row = `
                    <tr>
                        <td><span class="badge bg-secondary">${trans.desde}</span></td>
                        <td><span class="badge bg-info">${trans.hacia}</span></td>
                        <td class="text-center">
                            <div class="form-check form-switch d-flex justify-content-center">
                                <input class="form-check-input permiso-check" type="checkbox" 
                                       id="permiso_${index}" 
                                       data-desde="${trans.desde}" 
                                       data-hacia="${trans.hacia}"
                                       ${trans.permitido ? 'checked' : ''}>
                            </div>
                        </td>
                    </tr>
                `;
                tbody.append(row);
            });
        }

        // Guardar permisos
        $('#btnGuardarPermisos').on('click', function() {
            if (!usuarioSeleccionado || usuarioSeleccionado.role === 'admin') {
                mostrarAlerta('Seleccione un usuario no administrador', 'warning');
                return;
            }

            const permisos = [];
            $('.permiso-check:checked').each(function() {
                permisos.push({
                    desde: $(this).data('desde'),
                    hacia: $(this).data('hacia')
                });
            });

            $.ajax({
                url: `/api/permisos-transiciones/${usuarioSeleccionado.username}`,
                method: 'PUT',
                headers: { 
                    'Authorization': `Bearer ${token}`,
                    'Content-Type': 'application/json'
                },
                data: JSON.stringify({ permisos: permisos }),
                success: function(response) {
                    if (response.success) {
                        mostrarAlerta(`Permisos actualizados exitosamente para ${usuarioSeleccionado.username}`, 'success');
                        cargarUsuarios(); // Recargar la lista
                    }
                },
                error: function(xhr) {
                    const error = xhr.responseJSON?.error || 'Error al guardar permisos';
                    mostrarAlerta(error, 'danger');
                }
            });
        });

        // Limpiar selección
        $('#btnLimpiarSeleccion').on('click', function() {
            $('#selectUsuario').val('');
            $('#matrizPermisos').hide();
            $('#mensajeSinSeleccion').html(`
                <i class="bi bi-person-circle" style="font-size: 3rem;"></i>
                <p class="mt-3">Seleccione un usuario para gestionar sus permisos de transición</p>
            `).show();
            usuarioSeleccionado = null;
            $('#alertaPermisos').empty();
        });

        // Función para mostrar alertas
        function mostrarAlerta(mensaje, tipo) {
            const alert = `
                <div class="alert alert-${tipo} alert-dismissible fade show" role="alert">
                    ${mensaje}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            `;
            $('#alertaPermisos').html(alert);
            
            // Auto-cerrar después de 5 segundos
            setTimeout(() => {
                $('#alertaPermisos').empty();
            }, 5000);
        }
    </script>
</body>

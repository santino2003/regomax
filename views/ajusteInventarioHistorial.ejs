<%- include('partials/header', { title: pageTitle }) %>

    <style>
        .badge-entrada { background-color: #198754; }
        .badge-salida { background-color: #dc3545; }
        .badge-ajuste-entrada { background-color: #0d6efd; }
        .badge-ajuste-salida { background-color: #ffc107; color: #000; }
        .table-responsive { max-height: 600px; overflow-y: auto; }
    </style>

    <div class="container-fluid my-4">
        <div class="row mb-4">
            <div class="col">
                <div class="menu-container p-4">
                    <!-- Header -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="menu-heading mb-0">
                            <i class="bi bi-clock-history me-2"></i>Historial de Movimientos
                        </h4>
                        <div>
                            <a href="/ajuste-inventario" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Nuevo Ajuste
                            </a>
                            <a href="/home" class="btn btn-outline-secondary">
                                <i class="bi bi-house"></i> Inicio
                            </a>
                        </div>
                    </div>

                    <p class="text-muted mb-4">Registro de todos los movimientos de inventario</p>

                    <!-- Filtros -->
                    <div class="card mb-4 shadow-sm">
                        <div class="card-header" style="background-color: #17a2b8; color: white;">
                            <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filtros de Búsqueda</h5>
                        </div>
                        <div class="card-body bg-light">
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <label class="form-label">Tipo de Movimiento</label>
                                    <select class="form-select" id="filtroTipo">
                                        <option value="">Todos</option>
                                        <option value="ENTRADA">Entrada</option>
                                        <option value="SALIDA">Salida</option>
                                        <option value="AJUSTE_ENTRADA">Ajuste Entrada</option>
                                        <option value="AJUSTE_SALIDA">Ajuste Salida</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Desde</label>
                                    <input type="date" class="form-control" id="filtroFechaDesde">
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Hasta</label>
                                    <input type="date" class="form-control" id="filtroFechaHasta">
                                </div>
                                <div class="col-md-3 d-flex align-items-end">
                                    <button class="btn btn-primary w-100" id="btnFiltrar">
                                        <i class="bi bi-funnel"></i> Filtrar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Tabla de movimientos -->
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover table-striped">
                                    <thead class="table-dark sticky-top">
                                        <tr>
                                            <th>Fecha</th>
                                            <th>Tipo</th>
                                            <th>Código</th>
                                            <th>Bien</th>
                                            <th>Cantidad</th>
                                            <th>Stock Ant.</th>
                                            <th>Stock Nvo.</th>
                                            <th>Almacén</th>
                                            <th>Cliente</th>
                                            <th>Responsable</th>
                                            <th>Usuario</th>
                                            <th>Observaciones</th>
                                        </tr>
                                    </thead>
                                    <tbody id="tablaMovimientos">
                                        <tr>
                                            <td colspan="12" class="text-center">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">Cargando...</span>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <!-- Paginación -->
                <nav aria-label="Paginación de movimientos" class="mt-3">
                    <ul class="pagination justify-content-center" id="paginacion"></ul>
                </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include('partials/footer') %>

    <!-- Script inline (después del footer para que jQuery esté cargado) -->
    <script>
        $(document).ready(function() {
            let paginaActual = 1;
            const registrosPorPagina = 20;

            // Cargar movimientos al inicio
            cargarMovimientos();

            // Botón filtrar
            $('#btnFiltrar').on('click', function() {
                paginaActual = 1;
                cargarMovimientos();
            });

            /**
             * Cargar movimientos con filtros
             */
            function cargarMovimientos() {
                const filtros = {
                    page: paginaActual,
                    limit: registrosPorPagina,
                    tipo_movimiento: $('#filtroTipo').val(),
                    fecha_desde: $('#filtroFechaDesde').val(),
                    fecha_hasta: $('#filtroFechaHasta').val()
                };

                $.ajax({
                    url: '/api/ajustes-inventario',
                    method: 'GET',
                    data: filtros,
                    success: function(response) {
                        if (response.success) {
                            renderizarMovimientos(response.data.movimientos);
                            renderizarPaginacion(response.data.paginacion);
                        }
                    },
                    error: function() {
                        $('#tablaMovimientos').html(`
                            <tr>
                                <td colspan="12" class="text-center text-danger">
                                    Error al cargar los movimientos
                                </td>
                            </tr>
                        `);
                    }
                });
            }

            /**
             * Renderizar movimientos en la tabla
             */
            function renderizarMovimientos(movimientos) {
                if (movimientos.length === 0) {
                    $('#tablaMovimientos').html(`
                        <tr>
                            <td colspan="12" class="text-center text-muted">
                                No se encontraron movimientos
                            </td>
                        </tr>
                    `);
                    return;
                }

                let html = '';
                movimientos.forEach(mov => {
                    let badgeClass, tipoTexto;
                    switch(mov.tipo_movimiento) {
                        case 'ENTRADA':
                            badgeClass = 'badge-entrada';
                            tipoTexto = 'Entrada';
                            break;
                        case 'SALIDA':
                            badgeClass = 'badge-salida';
                            tipoTexto = 'Salida';
                            break;
                        case 'AJUSTE_ENTRADA':
                            badgeClass = 'badge-ajuste-entrada';
                            tipoTexto = 'Ajuste Entrada';
                            break;
                        case 'AJUSTE_SALIDA':
                            badgeClass = 'badge-ajuste-salida';
                            tipoTexto = 'Ajuste Salida';
                            break;
                        default:
                            badgeClass = 'badge-secondary';
                            tipoTexto = mov.tipo_movimiento;
                    }
                    
                    const fecha = new Date(mov.fecha_movimiento).toLocaleDateString('es-AR');
                    
                    html += `
                        <tr>
                            <td>${fecha}</td>
                            <td><span class="badge ${badgeClass}">${tipoTexto}</span></td>
                            <td>${mov.codigo || '-'}</td>
                            <td>${mov.nombre || '-'}</td>
                            <td class="text-center">${mov.cantidad}</td>
                            <td class="text-center">${mov.stock_anterior}</td>
                            <td class="text-center"><strong>${mov.stock_nuevo}</strong></td>
                            <td>${mov.almacen_nombre || '-'}</td>
                            <td>${mov.cliente_nombre || '-'}</td>
                            <td>${mov.responsable || '-'}</td>
                            <td>${mov.usuario_sistema || '-'}</td>
                            <td>${mov.observaciones || '-'}</td>
                        </tr>
                    `;
                });

                $('#tablaMovimientos').html(html);
            }

            /**
             * Renderizar paginación
             */
            function renderizarPaginacion(paginacion) {
                let html = '';
                
                // Botón anterior
                html += `
                    <li class="page-item ${paginacion.paginaActual === 1 ? 'disabled' : ''}">
                        <a class="page-link" href="#" data-pagina="${paginacion.paginaActual - 1}">Anterior</a>
                    </li>
                `;

                // Números de página
                for (let i = 1; i <= paginacion.totalPaginas; i++) {
                    html += `
                        <li class="page-item ${i === paginacion.paginaActual ? 'active' : ''}">
                            <a class="page-link" href="#" data-pagina="${i}">${i}</a>
                        </li>
                    `;
                }

                // Botón siguiente
                html += `
                    <li class="page-item ${paginacion.paginaActual === paginacion.totalPaginas ? 'disabled' : ''}">
                        <a class="page-link" href="#" data-pagina="${paginacion.paginaActual + 1}">Siguiente</a>
                    </li>
                `;

                $('#paginacion').html(html);

                // Event handler para paginación
                $('.page-link').on('click', function(e) {
                    e.preventDefault();
                    const pagina = parseInt($(this).data('pagina'));
                    if (pagina > 0 && pagina <= paginacion.totalPaginas) {
                        paginaActual = pagina;
                        cargarMovimientos();
                    }
                });
            }
        });
    </script>


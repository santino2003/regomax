                                                        <tr class="fw-bold">
                                                            <td>TOTAL</td>
                                                            <td id="fechaActual"></td>
                                                            <td id="totalProducidoHoy">0 kg</td>
                                                            <td id="totalAcumuladoMes">0 kg</td>
                                                            <td id="totalProyeccionMes">0 kg</td>
                                                            <td id="totalPlanificadoAcumulado">0 kg</td>

<%- include('partials/header') %>

<div class="container my-4">
    <div class="row mb-4">
        <div class="col">
            <div class="menu-container p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h4 class="menu-heading mb-0">
                        <i class="bi bi-recycle me-2"></i>Listado de Ingresos NFU
                    </h4>
                    <div>
                        <button id="btnExportarCSV" class="btn btn-success me-2">
                            <i class="bi bi-file-earmark-spreadsheet me-2"></i>Exportar a CSV
                        </button>
                        <a href="/nfu/nuevo" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-2"></i>Nuevo Ingreso NFU
                        </a>
                    </div>
                </div>

                <!-- Filtros -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-funnel me-2"></i>Filtros
                        </h5>
                    </div>
                    <div class="card-body">
                        <form id="filtrosForm" method="GET">
                            <div class="row g-3">
                                <div class="col-md-5">
                                    <label for="fechaDesde" class="form-label">Desde:</label>
                                    <input type="date" class="form-control" id="fechaDesde" name="fechaDesde"
                                        value="<%= filtros && filtros.fechaDesde || '' %>">
                                </div>
                                <div class="col-md-5">
                                    <label for="fechaHasta" class="form-label">Hasta:</label>
                                    <input type="date" class="form-control" id="fechaHasta" name="fechaHasta"
                                        value="<%= filtros && filtros.fechaHasta || '' %>">
                                </div>
                                <div class="col-md-2 d-flex align-items-end">
                                    <button type="submit" class="btn btn-primary me-2">
                                        <i class="bi bi-search me-1"></i>Buscar
                                    </button>
                                    <a href="/nfu" class="btn btn-outline-secondary">
                                        <i class="bi bi-x-circle me-1"></i>Limpiar
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="tablaNFU">
                        <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>Responsable</th>
                                <th>Cliente</th>
                                <th>Categoría</th>
                                <th>Tipo</th>
                                <th>Cantidad (Kg)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (registros && registros.length > 0) { %>
                                <% registros.forEach(function(ingreso) { %>
                                    <tr>
                                        <td>
                                            <% 
                                            const fecha = new Date(ingreso.fecha);
                                            const options = { 
                                                year: 'numeric', 
                                                month: '2-digit', 
                                                day: '2-digit', 
                                                timeZone: 'America/Argentina/Buenos_Aires' 
                                            };
                                            %>
                                            <%= fecha.toLocaleDateString('es-AR', options) %>
                                        </td>
                                        <td><%= ingreso.responsable %></td>
                                        <td>
                                            <% if (ingreso.cliente_empresa) { %>
                                                <%= ingreso.cliente_empresa %>
                                                <small class="text-muted d-block"><%= ingreso.cliente_cuit %></small>
                                            <% } else { %>
                                                <span class="text-muted">-</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (ingreso.categoria) { %>
                                                <span class="badge bg-<%= ingreso.categoria === 'NFU' ? 'primary' : 'success' %>">
                                                    <%= ingreso.categoria %>
                                                </span>
                                            <% } else { %>
                                                <span class="text-muted">-</span>
                                            <% } %>
                                        </td>
                                        <td><%= ingreso.tipo || '-' %></td>
                                        <td><%= ingreso.cantidad %></td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" class="text-center">No hay registros de ingresos NFU</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
                
                <% if (pagination && pagination.totalPages > 1) { %>
                    <nav aria-label="Navegación de ingresos NFU">
                        <ul class="pagination justify-content-center mt-3">
                            <li class="page-item <%= pagination.page === 1 ? 'disabled' : '' %>">
                                <a class="page-link" href="/nfu?page=<%= pagination.page - 1 %>&limit=<%= pagination.limit %><%= filtros && filtros.fechaDesde ? '&fechaDesde=' + filtros.fechaDesde : '' %><%= filtros && filtros.fechaHasta ? '&fechaHasta=' + filtros.fechaHasta : '' %>" tabindex="-1">Anterior</a>
                            </li>
                            
                            <% for(let i = 1; i <= pagination.totalPages; i++) { %>
                                <li class="page-item <%= pagination.page === i ? 'active' : '' %>">
                                    <a class="page-link" href="/nfu?page=<%= i %>&limit=<%= pagination.limit %><%= filtros && filtros.fechaDesde ? '&fechaDesde=' + filtros.fechaDesde : '' %><%= filtros && filtros.fechaHasta ? '&fechaHasta=' + filtros.fechaHasta : '' %>"><%= i %></a>
                                </li>
                            <% } %>
                            
                            <li class="page-item <%= pagination.page === pagination.totalPages ? 'disabled' : '' %>">
                                <a class="page-link" href="/nfu?page=<%= pagination.page + 1 %>&limit=<%= pagination.limit %><%= filtros && filtros.fechaDesde ? '&fechaDesde=' + filtros.fechaDesde : '' %><%= filtros && filtros.fechaHasta ? '&fechaHasta=' + filtros.fechaHasta : '' %>">Siguiente</a>
                            </li>
                        </ul>
                    </nav>
                <% } %>
                
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div>
                        Mostrando <%= registros.length %> de <%= pagination ? pagination.total : registros.length %> registros
                    </div>
                    <div>
                        <form class="d-flex" action="/nfu" method="GET">
                            <select class="form-select form-select-sm me-2" name="limit" onchange="this.form.submit()">
                                <option value="10" <%= pagination && pagination.limit === 10 ? 'selected' : '' %>>10 por página</option>
                                <option value="25" <%= pagination && pagination.limit === 25 ? 'selected' : '' %>>25 por página</option>
                                <option value="50" <%= pagination && pagination.limit === 50 ? 'selected' : '' %>>50 por página</option>
                                <option value="100" <%= pagination && pagination.limit === 100 ? 'selected' : '' %>>100 por página</option>
                            </select>
                            <input type="hidden" name="page" value="1">
                            <% if (filtros && filtros.fechaDesde) { %>
                                <input type="hidden" name="fechaDesde" value="<%= filtros.fechaDesde %>">
                            <% } %>
                            <% if (filtros && filtros.fechaHasta) { %>
                                <input type="hidden" name="fechaHasta" value="<%= filtros.fechaHasta %>">
                            <% } %>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col">
            <a href="/home" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-2"></i>Volver al panel
            </a>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Establecer fechas por defecto (mes actual) si no hay filtros aplicados
    function setFechasConZonaHorariaBuenosAires() {
        const options = { year: 'numeric', month: '2-digit', day: '2-digit', timeZone: 'America/Argentina/Buenos_Aires' };
        const hoy = new Date();
        
        // Primer día del mes actual en Buenos Aires
        const primerDia = new Date(hoy.getFullYear(), hoy.getMonth(), 1);
        const primerDiaFormatoBA = primerDia.toLocaleDateString('es-AR', options).split('/').reverse().join('-');
        
        // Fecha actual en Buenos Aires
        const hoyFormatoBA = hoy.toLocaleDateString('es-AR', options).split('/').reverse().join('-');
        
        // Establecer fechas en los campos si no tienen valores
        if (!document.getElementById('fechaDesde').value) {
            document.getElementById('fechaDesde').value = primerDiaFormatoBA;
        }
        
        if (!document.getElementById('fechaHasta').value) {
            document.getElementById('fechaHasta').value = hoyFormatoBA;
        }
    }
    
    setFechasConZonaHorariaBuenosAires();
    
    // Exportar a CSV
    const btnExportar = document.getElementById('btnExportarCSV');
    
    if (btnExportar) {
        btnExportar.addEventListener('click', function() {
            console.log('Click en exportar NFU a CSV');
            
            // Obtener los filtros actuales
            const fechaDesde = document.getElementById('fechaDesde').value || '';
            const fechaHasta = document.getElementById('fechaHasta').value || '';
            
            console.log('Filtros:', { fechaDesde, fechaHasta });
            
            // Construir URL con los filtros
            let url = '/api/nfu/exportar-csv?';
            const params = [];
            
            if (fechaDesde) params.push(`fechaDesde=${encodeURIComponent(fechaDesde)}`);
            if (fechaHasta) params.push(`fechaHasta=${encodeURIComponent(fechaHasta)}`);
            
            url += params.join('&');
            
            console.log('URL de descarga:', url);
            
            // Descargar el archivo
            window.location.href = url;
        });
    }
});
</script>

<%- include('partials/footer') %>
<%- include('partials/header', { title: pageTitle }) %>

    <style>
        .badge-entrada { background-color: #198754; }
        .badge-salida { background-color: #dc3545; }
        .badge-ajuste-entrada { background-color: #0d6efd; }
        .badge-ajuste-salida { background-color: #ffc107; color: #000; }
        .table-responsive { max-height: 600px; overflow-y: auto; }
    </style>

    <div class="container-fluid my-4">
        <div class="row mb-4">
            <div class="col">
                <div class="menu-container p-4">
                    <!-- Header -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="menu-heading mb-0">
                            <i class="bi bi-clock-history me-2"></i>Historial de Movimientos
                        </h4>
                        <div>
                            <a href="/ajuste-inventario" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Nuevo Ajuste
                            </a>
                            <a href="/home" class="btn btn-outline-secondary">
                                <i class="bi bi-house"></i> Inicio
                            </a>
                        </div>
                    </div>
                    <!-- Filtros -->
                    <div class="card mb-4 shadow-sm">
                        <div class="card-header" style="background-color: #17a2b8; color: white;">
                            <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filtros de Búsqueda</h5>
                        </div>
                        <div class="card-body bg-light">
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <label class="form-label">Tipo de Movimiento</label>
                                    <select class="form-select" id="filtroTipo">
                                        <option value="">Todos</option>
                                        <option value="ENTRADA">Entrada</option>
                                        <option value="SALIDA">Salida</option>
                                        <option value="AJUSTE_ENTRADA">Ajuste Entrada</option>
                                        <option value="AJUSTE_SALIDA">Ajuste Salida</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Desde</label>
                                    <input type="date" class="form-control" id="filtroFechaDesde">
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Hasta</label>
                                    <input type="date" class="form-control" id="filtroFechaHasta">
                                </div>
                                <div class="col-md-3 d-flex align-items-end">
                                    <button class="btn btn-primary w-100" id="btnFiltrar">
                                        <i class="bi bi-funnel"></i> Filtrar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Tabla de movimientos -->
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover table-striped">
                                    <thead class="table-dark sticky-top">
                                        <tr>
                                            <th>Fecha</th>
                                            <th>Tipo</th>
                                            <th>Código</th>
                                            <th>Bien</th>
                                            <th>Cantidad</th>
                                            <th>Stock Ant.</th>
                                            <th>Stock Nvo.</th>
                                            <th>Almacén</th>
                                            <th>Cliente</th>
                                            <th>Responsable</th>
                                            <th>Usuario</th>
                                            <th>Observaciones</th>
                                        </tr>
                                    </thead>
                                    <tbody id="tablaMovimientos">
                                        <tr>
                                            <td colspan="12" class="text-center">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">Cargando...</span>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <!-- Paginación -->
                <nav aria-label="Paginación de movimientos" class="mt-3">
                    <ul class="pagination justify-content-center" id="paginacion"></ul>
                </nav>
                
                <!-- Selector de registros por página -->
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div id="infoRegistros">
                        Mostrando 0 de 0 registros
                    </div>
                    <div>
                        <select class="form-select form-select-sm" id="registrosPorPagina" style="width: auto;">
                            <option value="10">10 por página</option>
                            <option value="20" selected>20 por página</option>
                            <option value="50">50 por página</option>
                            <option value="100">100 por página</option>
                        </select>
                    </div>
                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include('partials/footer') %>

    <!-- Script inline (después del footer para que jQuery esté cargado) -->
    <script>
        $(document).ready(function() {
            let paginaActual = 1;
            let registrosPorPagina = 20;

            // Obtener el bien_id de la URL si existe
            const urlParams = new URLSearchParams(window.location.search);
            const bienIdFiltro = urlParams.get('bien_id');

            // Si hay un bien_id en la URL, cargar el nombre del bien
            if (bienIdFiltro) {
                cargarNombreBien(bienIdFiltro);
            }

            // Cargar movimientos al inicio
            cargarMovimientos();
            
            // Event handler para cambiar registros por página
            $('#registrosPorPagina').on('change', function() {
                registrosPorPagina = parseInt($(this).val());
                paginaActual = 1; // Reiniciar a la primera página
                cargarMovimientos();
            });

            // Botón filtrar
            $('#btnFiltrar').on('click', function() {
                paginaActual = 1;
                cargarMovimientos();
            });

            /**
             * Cargar el nombre del bien
             */
            function cargarNombreBien(bienId) {
                $.ajax({
                    url: `/api/bienes/${bienId}`,
                    method: 'GET',
                    success: function(response) {
                        if (response.success && response.data) {
                            const bien = response.data;
                            // Actualizar el título
                            $('.menu-heading').html(`
                                <i class="bi bi-clock-history me-2"></i>Historial de Movimientos
                                <small class="text-muted ms-2">(${bien.codigo} - ${bien.nombre})</small>
                            `);
                            // Agregar badge informativo
                            $('.text-muted.mb-4').html(`
                                Mostrando todos los movimientos del bien: <strong>${bien.codigo} - ${bien.nombre}</strong>
                                <a href="/ajuste-inventario/historial" class="ms-3 btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i> Ver todos los bienes
                                </a>
                            `);
                        }
                    }
                });
            }

            /**
             * Cargar movimientos con filtros
             */
            function cargarMovimientos() {
                const filtros = {
                    page: paginaActual,
                    limit: registrosPorPagina,
                    tipo_movimiento: $('#filtroTipo').val(),
                    fecha_desde: $('#filtroFechaDesde').val(),
                    fecha_hasta: $('#filtroFechaHasta').val()
                };

                // Agregar bien_id si existe en la URL
                if (bienIdFiltro) {
                    filtros.bien_id = bienIdFiltro;
                }

                $.ajax({
                    url: '/api/ajustes-inventario',
                    method: 'GET',
                    data: filtros,
                    success: function(response) {
                        if (response.success) {
                            renderizarMovimientos(response.data.movimientos);
                            renderizarPaginacion(response.data.paginacion);
                            actualizarInfoRegistros(response.data.movimientos.length, response.data.paginacion.totalRegistros);
                        }
                    },
                    error: function() {
                        $('#tablaMovimientos').html(`
                            <tr>
                                <td colspan="12" class="text-center text-danger">
                                    Error al cargar los movimientos
                                </td>
                            </tr>
                        `);
                    }
                });
            }

            /**
             * Formatear cantidad: si es entero (sin decimales) mostrar sin .00, si tiene decimales mostrarlos
             */
            function formatearCantidad(valor) {
                const num = parseFloat(valor);
                if (isNaN(num)) return valor;
                // Si es número entero, mostrar sin decimales
                if (num % 1 === 0) {
                    return num.toString();
                }
                // Si tiene decimales, mostrar con 2 decimales máximo
                return num.toFixed(2).replace(/\.?0+$/, '');
            }

            /**
             * Renderizar movimientos en la tabla
             */
            function renderizarMovimientos(movimientos) {
                if (movimientos.length === 0) {
                    $('#tablaMovimientos').html(`
                        <tr>
                            <td colspan="12" class="text-center text-muted">
                                No se encontraron movimientos
                            </td>
                        </tr>
                    `);
                    return;
                }

                let html = '';
                movimientos.forEach(mov => {
                    let badgeClass, tipoTexto;
                    switch(mov.tipo_movimiento) {
                        case 'ENTRADA':
                            badgeClass = 'badge-entrada';
                            tipoTexto = 'Entrada';
                            break;
                        case 'SALIDA':
                            badgeClass = 'badge-salida';
                            tipoTexto = 'Salida';
                            break;
                        case 'AJUSTE_ENTRADA':
                            badgeClass = 'badge-ajuste-entrada';
                            tipoTexto = 'Ajuste Entrada';
                            break;
                        case 'AJUSTE_SALIDA':
                            badgeClass = 'badge-ajuste-salida';
                            tipoTexto = 'Ajuste Salida';
                            break;
                        default:
                            badgeClass = 'badge-secondary';
                            tipoTexto = mov.tipo_movimiento;
                    }
                    
                    const fecha = new Date(mov.fecha_movimiento).toLocaleDateString('es-AR');
                    
                    html += `
                        <tr>
                            <td>${fecha}</td>
                            <td><span class="badge ${badgeClass}">${tipoTexto}</span></td>
                            <td>${mov.codigo || '-'}</td>
                            <td>${mov.nombre || '-'}</td>
                            <td class="text-center">${formatearCantidad(mov.cantidad)}</td>
                            <td class="text-center">${formatearCantidad(mov.stock_anterior)}</td>
                            <td class="text-center"><strong>${formatearCantidad(mov.stock_nuevo)}</strong></td>
                            <td>${mov.almacen_nombre || '-'}</td>
                            <td>${mov.cliente_nombre || '-'}</td>
                            <td>${mov.responsable || '-'}</td>
                            <td>${mov.usuario_sistema || '-'}</td>
                            <td>${mov.observaciones || '-'}</td>
                        </tr>
                    `;
                });

                $('#tablaMovimientos').html(html);
            }

            /**
             * Renderizar paginación
             */
            function renderizarPaginacion(paginacion) {
                let html = '';
                
                const totalPages = paginacion.totalPaginas;
                const currentPage = paginacion.paginaActual;
                const maxPagesToShow = 5;
                
                let startPage = Math.max(1, currentPage - Math.floor(maxPagesToShow / 2));
                let endPage = Math.min(totalPages, startPage + maxPagesToShow - 1);
                
                // Ajustar el rango si estamos cerca del final
                if (endPage - startPage + 1 < maxPagesToShow) {
                    startPage = Math.max(1, endPage - maxPagesToShow + 1);
                }
                
                // Botón primera página
                html += `
                    <li class="page-item ${currentPage === 1 ? 'disabled' : ''}">
                        <a class="page-link" href="#" data-pagina="1" aria-label="Primera">
                            <span aria-hidden="true">&laquo;&laquo;</span>
                        </a>
                    </li>
                `;
                
                // Botón anterior
                html += `
                    <li class="page-item ${currentPage === 1 ? 'disabled' : ''}">
                        <a class="page-link" href="#" data-pagina="${currentPage - 1}" aria-label="Anterior">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                `;

                // Mostrar primera página si no está en el rango
                if (startPage > 1) {
                    html += `
                        <li class="page-item">
                            <a class="page-link" href="#" data-pagina="1">1</a>
                        </li>
                    `;
                    if (startPage > 2) {
                        html += `<li class="page-item disabled"><span class="page-link">...</span></li>`;
                    }
                }

                // Números de página (solo las visibles)
                for (let i = startPage; i <= endPage; i++) {
                    html += `
                        <li class="page-item ${i === currentPage ? 'active' : ''}">
                            <a class="page-link" href="#" data-pagina="${i}">${i}</a>
                        </li>
                    `;
                }

                // Mostrar última página si no está en el rango
                if (endPage < totalPages) {
                    if (endPage < totalPages - 1) {
                        html += `<li class="page-item disabled"><span class="page-link">...</span></li>`;
                    }
                    html += `
                        <li class="page-item">
                            <a class="page-link" href="#" data-pagina="${totalPages}">${totalPages}</a>
                        </li>
                    `;
                }

                // Botón siguiente
                html += `
                    <li class="page-item ${currentPage === totalPages ? 'disabled' : ''}">
                        <a class="page-link" href="#" data-pagina="${currentPage + 1}" aria-label="Siguiente">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                `;
                
                // Botón última página
                html += `
                    <li class="page-item ${currentPage === totalPages ? 'disabled' : ''}">
                        <a class="page-link" href="#" data-pagina="${totalPages}" aria-label="Última">
                            <span aria-hidden="true">&raquo;&raquo;</span>
                        </a>
                    </li>
                `;

                $('#paginacion').html(html);

                // Event handler para paginación
                $('.page-link').on('click', function(e) {
                    e.preventDefault();
                    const pagina = parseInt($(this).data('pagina'));
                    if (pagina > 0 && pagina <= totalPages) {
                        paginaActual = pagina;
                        cargarMovimientos();
                    }
                });
            }
            
            /**
             * Actualizar información de registros mostrados
             */
            function actualizarInfoRegistros(mostrados, total) {
                $('#infoRegistros').text(`Mostrando ${mostrados} de ${total} registros`);
            }
        });
    </script>


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Regomax</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <!-- Custom styles -->
    <link rel="stylesheet" href="/assets/css/home.css">
    
    <style>
        .calendar-day {
            height: 60px;
            width: 100%;
            position: relative;
            cursor: pointer;
            transition: all 0.2s;
        }
        
        .calendar-day:hover {
            background-color: #f0f0f0;
        }
        
        .calendar-day.active {
            background-color: #cfe2ff;
            border: 1px solid #0d6efd;
        }
        
        .calendar-day.other-month {
            background-color: #f8f9fa;
            color: #6c757d;
        }
        
        .calendar-day .day-number {
            position: absolute;
            top: 5px;
            left: 5px;
            font-size: 0.9rem;
            font-weight: bold;
        }
        
        .calendar-day .day-content {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }
        
        .calendar-day.weekend {
            background-color: #f5f5f5;
        }
        
        .month-navigator {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/home">
                <img src="/assets/img/regomax.png" alt="Regomax Logo" class="bg-white rounded p-1">
                <span class="ms-2 fw-bold">Regomax S.A.</span>
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item user-welcome me-3">
                        <span class="text-light">BIENVENIDO/A, <b><%= username %></b></span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home"><i class="bi bi-house-door me-1"></i> Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-key me-1"></i> Cambiar contraseña</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" id="logout-link"><i class="bi bi-box-arrow-right me-1"></i> Cerrar sesión</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container my-4">
        <div class="row mb-4">
            <div class="col">
                <div class="menu-container p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="menu-heading mb-0">
                            <i class="bi bi-calendar me-2"></i>Planificación de Días Hábiles
                        </h4>
                        
                        <div class="btn-group" role="group">
                            <a href="/reportes/cargar-nfu" class="btn btn-outline-primary">
                                <i class="bi bi-truck me-2"></i>Cargar NFU
                            </a>
                            <a href="/reportes/ver" class="btn btn-outline-primary">
                                <i class="bi bi-graph-up me-2"></i>Ver Reportes
                            </a>
                        </div>
                    </div>
                    
                    <!-- Alertas -->
                    <div id="alertContainer"></div>
                    
                    <div class="row">
                        <div class="col-lg-8 mx-auto">
                            <div class="card">
                                <div class="card-header bg-light">
                                    <div class="month-navigator">
                                        <button class="btn btn-outline-secondary" id="prevMonth">
                                            <i class="bi bi-chevron-left"></i>
                                        </button>
                                        <h5 class="mb-0" id="currentMonthYear"></h5>
                                        <button class="btn btn-outline-secondary" id="nextMonth">
                                            <i class="bi bi-chevron-right"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <!-- Calendario -->
                                    <div class="row mb-2">
                                        <div class="col text-center fw-bold">Dom</div>
                                        <div class="col text-center fw-bold">Lun</div>
                                        <div class="col text-center fw-bold">Mar</div>
                                        <div class="col text-center fw-bold">Mié</div>
                                        <div class="col text-center fw-bold">Jue</div>
                                        <div class="col text-center fw-bold">Vie</div>
                                        <div class="col text-center fw-bold">Sáb</div>
                                    </div>
                                    
                                    <div id="calendarContainer">
                                        <!-- Aquí se generará dinámicamente el calendario -->
                                    </div>
                                    
                                    <div class="mt-4">
                                        <div class="d-flex align-items-center mb-2">
                                            <div class="me-2 p-2" style="background-color: #cfe2ff; width: 20px; height: 20px;"></div>
                                            <span>Día hábil seleccionado</span>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <div class="me-2 p-2" style="background-color: #f5f5f5; width: 20px; height: 20px;"></div>
                                            <span>Fin de semana (no hábil por defecto)</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="d-flex justify-content-between">
                                        <button class="btn btn-outline-primary" id="selectAllWeekdays">
                                            <i class="bi bi-calendar-check me-1"></i>Seleccionar días laborales
                                        </button>
                                        <button class="btn btn-primary" id="guardarDiasHabiles">
                                            <i class="bi bi-save me-1"></i>Guardar configuración
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col">
                <a href="/home" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Volver al panel
                </a>
            </div>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <!-- Common JS -->
    <script src="/assets/js/common.js"></script>
    
    <!-- Custom JS for this page -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Variables globales
            let currentMonth = <%= mes %>;
            let currentYear = <%= anio %>;
            let selectedDays = [];
            
            // Si hay días hábiles ya configurados, cargarlos
            <% if (diasHabiles && diasHabiles.dias) { %>
                selectedDays = <%= JSON.stringify(diasHabiles.dias) %>;
            <% } %>
            
            // Actualizar título del mes
            function updateMonthYearTitle() {
                const months = ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'];
                document.getElementById('currentMonthYear').textContent = `${months[currentMonth-1]} ${currentYear}`;
            }
            
            // Generar calendario
            function generateCalendar() {
                const firstDay = new Date(currentYear, currentMonth - 1, 1);
                const lastDay = new Date(currentYear, currentMonth, 0);
                const daysInMonth = lastDay.getDate();
                const startingDayOfWeek = firstDay.getDay(); // 0 = Domingo, 1 = Lunes, etc.
                
                let calendarHTML = '';
                let dayCounter = 1;
                const totalWeeks = Math.ceil((daysInMonth + startingDayOfWeek) / 7);
                
                for (let week = 0; week < totalWeeks; week++) {
                    calendarHTML += '<div class="row mb-2">';
                    
                    for (let dayOfWeek = 0; dayOfWeek < 7; dayOfWeek++) {
                        if (week === 0 && dayOfWeek < startingDayOfWeek) {
                            // Días del mes anterior
                            calendarHTML += '<div class="col"><div class="calendar-day other-month"></div></div>';
                        } else if (dayCounter > daysInMonth) {
                            // Días del mes siguiente
                            calendarHTML += '<div class="col"><div class="calendar-day other-month"></div></div>';
                        } else {
                            // Días del mes actual
                            const isWeekend = dayOfWeek === 0 || dayOfWeek === 6;
                            const currentDate = `${currentYear}-${String(currentMonth).padStart(2, '0')}-${String(dayCounter).padStart(2, '0')}`;
                            const isSelected = selectedDays.includes(currentDate);
                            
                            calendarHTML += `
                                <div class="col">
                                    <div class="calendar-day${isWeekend ? ' weekend' : ''}${isSelected ? ' active' : ''}" data-date="${currentDate}">
                                        <span class="day-number">${dayCounter}</span>
                                        <div class="day-content">
                                            ${isSelected ? '<i class="bi bi-check-circle-fill text-primary"></i>' : ''}
                                        </div>
                                    </div>
                                </div>`;
                            
                            dayCounter++;
                        }
                    }
                    
                    calendarHTML += '</div>';
                }
                
                document.getElementById('calendarContainer').innerHTML = calendarHTML;
                
                // Añadir eventos a los días
                document.querySelectorAll('.calendar-day:not(.other-month)').forEach(day => {
                    day.addEventListener('click', function() {
                        const date = this.dataset.date;
                        if (this.classList.contains('active')) {
                            // Desactivar día
                            this.classList.remove('active');
                            selectedDays = selectedDays.filter(d => d !== date);
                            this.querySelector('.day-content').innerHTML = '';
                        } else {
                            // Activar día
                            this.classList.add('active');
                            selectedDays.push(date);
                            this.querySelector('.day-content').innerHTML = '<i class="bi bi-check-circle-fill text-primary"></i>';
                        }
                    });
                });
            }
            
            // Seleccionar todos los días laborales (lunes a viernes)
            document.getElementById('selectAllWeekdays').addEventListener('click', function() {
                // Limpiar selecciones actuales
                selectedDays = [];
                
                // Seleccionar todos los días de lunes a viernes
                document.querySelectorAll('.calendar-day:not(.other-month):not(.weekend)').forEach(day => {
                    const date = day.dataset.date;
                    day.classList.add('active');
                    selectedDays.push(date);
                    day.querySelector('.day-content').innerHTML = '<i class="bi bi-check-circle-fill text-primary"></i>';
                });
            });
            
            // Navegación de meses
            document.getElementById('prevMonth').addEventListener('click', function() {
                currentMonth--;
                if (currentMonth < 1) {
                    currentMonth = 12;
                    currentYear--;
                }
                updateMonthYearTitle();
                generateCalendar();
                loadDiasHabiles();
            });
            
            document.getElementById('nextMonth').addEventListener('click', function() {
                currentMonth++;
                if (currentMonth > 12) {
                    currentMonth = 1;
                    currentYear++;
                }
                updateMonthYearTitle();
                generateCalendar();
                loadDiasHabiles();
            });
            
            // Cargar días hábiles del servidor
            function loadDiasHabiles() {
                selectedDays = []; // Limpiar días seleccionados
                
                // URL con parámetros de consulta
                const url = `/reportes/planificar-mes?mes=${currentMonth}&anio=${currentYear}`;
                
                // Redireccionar para cargar los datos del mes seleccionado
                window.location.href = url;
            }
            
            // Guardar días hábiles
            document.getElementById('guardarDiasHabiles').addEventListener('click', function() {
                // Ordenar fechas
                selectedDays.sort();
                
                // Datos a enviar
                const data = {
                    mes: currentMonth,
                    anio: currentYear,
                    diasHabiles: selectedDays
                };
                
                // Enviar al servidor
                fetch('/api/reportes/dias-habiles', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showAlert('Días hábiles guardados correctamente', 'success');
                    } else {
                        showAlert('Error al guardar: ' + data.message, 'danger');
                    }
                })
                .catch(error => {
                    showAlert('Error de conexión: ' + error.message, 'danger');
                });
            });
            
            // Mostrar alerta
            function showAlert(message, type) {
                const alertHTML = `
                    <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                        <i class="bi bi-${type === 'success' ? 'check-circle' : 'exclamation-triangle'} me-2"></i>
                        ${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                `;
                document.getElementById('alertContainer').innerHTML = alertHTML;
                
                // Auto-ocultar después de 5 segundos
                setTimeout(() => {
                    const alert = document.querySelector('.alert');
                    if (alert) {
                        const bsAlert = new bootstrap.Alert(alert);
                        bsAlert.close();
                    }
                }, 5000);
            }
            
            // Inicializar
            updateMonthYearTitle();
            generateCalendar();
        });
    </script>
</body>
</html>
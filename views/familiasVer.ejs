<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalle Familia - Regomax</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <!-- Custom styles -->
    <link rel="stylesheet" href="/assets/css/home.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/home">
                <img src="/assets/img/regomax.png" alt="Regomax Logo" class="bg-white rounded p-1">
                <span class="ms-2 fw-bold">Regomax S.A.</span>
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item user-welcome me-3">
                        <span class="text-light">BIENVENIDO/A, <b><%= username %></b></span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-globe me-1"></i> Ver sitio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" id="logout-link"><i class="bi bi-box-arrow-right me-1"></i> Cerrar sesión</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container my-4">
        <div class="row mb-4">
            <div class="col">
                <div class="menu-container p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="menu-heading mb-0">
                            <i class="bi bi-tags me-2"></i>Detalle de la Familia
                        </h4>
                        <div>
                            <a href="/familias/editar/<%= familia.id %>" class="btn btn-warning">
                                <i class="bi bi-pencil me-2"></i>Editar
                            </a>
                            <button class="btn btn-danger ms-2 btn-delete" data-id="<%= familia.id %>" data-nombre="<%= familia.nombre %>">
                                <i class="bi bi-trash me-2"></i>Eliminar
                            </button>
                        </div>
                    </div>
                    
                    <div class="card">
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Nombre:</label>
                                    <p class="form-control-plaintext"><%= familia.nombre %></p>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Responsable:</label>
                                    <p class="form-control-plaintext"><%= familia.responsable || '-' %></p>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Fecha de Creación:</label>
                                    <p class="form-control-plaintext"><%= familia.fecha_creacion ? new Date(familia.fecha_creacion).toLocaleString('es-AR') : '-' %></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <a href="/familias" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Volver al Listado
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de Confirmación para Eliminar -->
    <div class="modal fade" id="deleteFamiliaModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title"><i class="bi bi-exclamation-triangle-fill me-2"></i>Confirmar Eliminación</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>¿Está seguro que desea eliminar la familia <span id="deleteFamiliaNombre" class="fw-bold"></span>?</p>
                    <p class="text-danger mb-0">¡Esta acción no se puede deshacer!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-danger" id="confirmDelete">Eliminar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <!-- Common JS -->
    <script src="/assets/js/common.js"></script>
    
    <!-- Script para manejar eliminación -->
    <script>
        $(document).ready(function() {
            let familiaIdToDelete = null;
            const deleteModal = new bootstrap.Modal(document.getElementById('deleteFamiliaModal'));
            
            $('.btn-delete').on('click', function() {
                familiaIdToDelete = $(this).data('id');
                const familiaNombre = $(this).data('nombre');
                
                $('#deleteFamiliaNombre').text(familiaNombre);
                deleteModal.show();
            });
            
            $('#confirmDelete').on('click', function() {
                if (!familiaIdToDelete) return;
                
                const btn = $(this);
                const originalText = btn.html();
                btn.html('<span class="spinner-border spinner-border-sm me-2"></span>Eliminando...').prop('disabled', true);
                
                fetch(`/api/familias/${familiaIdToDelete}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        deleteModal.hide();
                        window.location.href = '/familias';
                    } else {
                        deleteModal.hide();
                        console.error('Error:', data.message || 'No se pudo eliminar la familia');
                        setTimeout(() => window.location.href = '/familias', 500);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    deleteModal.hide();
                    setTimeout(() => window.location.href = '/familias', 500);
                })
                .finally(() => {
                    btn.html(originalText).prop('disabled', false);
                });
            });
        });
    </script>
</body>
</html>

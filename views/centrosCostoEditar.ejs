<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Centro de Costo - Regomax</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/assets/css/home.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/home">
                <img src="/assets/img/regomax.png" alt="Regomax Logo" class="bg-white rounded p-1">
                <span class="ms-2 fw-bold">Regomax S.A.</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item user-welcome me-3">
                        <span class="text-light">BIENVENIDO/A, <b><%= username %></b></span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-globe me-1"></i> Ver sitio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" id="logout-link"><i class="bi bi-box-arrow-right me-1"></i> Cerrar sesi√≥n</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container my-4">
        <div class="row mb-4">
            <div class="col">
                <div class="menu-container p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="menu-heading mb-0">
                            <i class="bi bi-pencil me-2"></i>Editar Centro de Costo
                        </h4>
                    </div>
                    
                    <!-- Alert placeholder -->
                    <div id="alertPlaceholder"></div>
                    
                    <!-- Formulario -->
                    <form id="formEditarCentroCosto" class="needs-validation" novalidate>
                        <input type="hidden" id="centroCostoId" value="<%= centroCosto.id %>">
                        
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label for="nombre" class="form-label">Nombre del Centro de Costo <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="nombre" name="nombre" value="<%= centroCosto.nombre %>" required>
                                <div class="invalid-feedback">
                                    Por favor ingrese el nombre del centro de costo.
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col">
                                <button type="submit" id="submitBtn" class="btn btn-primary">
                                    <i class="bi bi-save me-2"></i>Guardar Cambios
                                </button>
                                <a href="/centros-costo/<%= centroCosto.id %>/ver" class="btn btn-outline-secondary ms-2">
                                    <i class="bi bi-x-circle me-2"></i>Cancelar
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/assets/js/common.js"></script>
    <script>
        $(document).ready(function() {
            const form = $('#formEditarCentroCosto');
            const centroCostoId = $('#centroCostoId').val();
            
            form.on('submit', function(e) {
                e.preventDefault();
                
                if (!form[0].checkValidity()) {
                    e.stopPropagation();
                    form.addClass('was-validated');
                    return;
                }
                
                const nombre = $('#nombre').val().trim();
                
                if (!nombre) {
                    showAlert('Por favor complete el nombre del centro de costo', 'warning');
                    return;
                }
                
                const submitBtn = $('#submitBtn');
                const originalText = submitBtn.html();
                submitBtn.html('<span class="spinner-border spinner-border-sm me-2"></span>Guardando...').prop('disabled', true);
                
                $.ajax({
                    url: `/api/centros-costo/${centroCostoId}`,
                    method: 'PUT',
                    contentType: 'application/json',
                    data: JSON.stringify({ nombre }),
                    success: function(response) {
                        showAlert('Centro de costo actualizado exitosamente', 'success');
                        setTimeout(() => {
                            window.location.href = `/centros-costo/${centroCostoId}/ver`;
                        }, 1500);
                    },
                    error: function(xhr) {
                        const error = xhr.responseJSON?.error || 'Error al actualizar el centro de costo';
                        showAlert(error, 'danger');
                        submitBtn.html(originalText).prop('disabled', false);
                    }
                });
            });
        });
    </script>
</body>
</html>

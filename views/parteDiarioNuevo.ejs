                                                        <select class="form-select" name="checkListPala.nivelAceiteMotor.estado">
                                                            <option value="OK">OK</option>
                                                            <option value="NO OK">NO OK</option>
                                                            <option value="N/A">N/A</option>
                                                        </select>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalle de Orden de Compra - Regomax</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/assets/css/home.css">
    <style>
        .badge-Abierta { background-color: #17a2b8; }
        .badge-Revision { background-color: #ffc107; color: #000; }
        .badge-Aprobada { background-color: #28a745; }
        .badge-EnProceso { background-color: #007bff; }
        .badge-Entregado { background-color: #6c757d; }
        .badge-Cerrada { background-color: #343a40; }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/home">
                <img src="/assets/img/regomax.png" alt="Regomax Logo" class="bg-white rounded p-1">
                <span class="ms-2 fw-bold">Regomax S.A.</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item user-welcome me-3">
                        <span class="text-light">BIENVENIDO/A, <b><%= username %></b></span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-globe me-1"></i> Ver sitio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" id="logout-link"><i class="bi bi-box-arrow-right me-1"></i> Cerrar sesión</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container my-4">
        <div class="row mb-4">
            <div class="col">
                <div class="menu-container p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="menu-heading mb-0">
                            <i class="bi bi-file-text me-2"></i>Detalle de Orden de Compra
                        </h4>
                        <div>
                            <a href="/ordenes-compra" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Volver
                            </a>
                            <a href="/ordenes-compra/<%= ordenId %>/editar" class="btn btn-warning">
                                <i class="bi bi-pencil me-1"></i>Editar
                            </a>
                        </div>
                    </div>
                    
                    <div id="alertPlaceholder"></div>
                    <div id="ordenDetalle">
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Cargando...</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const token = localStorage.getItem('token');
        const ordenId = <%= ordenId %>;

        $(document).ready(function() {
            cargarOrden();

            $('#logout-link').on('click', function(e) {
                e.preventDefault();
                localStorage.removeItem('token');
                window.location.href = '/login.html';
            });
        });

        function cargarOrden() {
            $.ajax({
                url: `/api/ordenes-compra/${ordenId}`,
                method: 'GET',
                headers: { 'Authorization': `Bearer ${token}` },
                success: function(response) {
                    if (response.success) {
                        renderizarOrden(response.data);
                    }
                },
                error: function(xhr) {
                    mostrarAlerta('Error al cargar orden de compra', 'danger');
                    $('#ordenDetalle').html('<p class="text-center text-danger">Error al cargar la orden</p>');
                }
            });
        }

        function renderizarOrden(orden) {
            const estadoClass = orden.estado.replace(/\s/g, '');
            const fechaSolicitada = orden.fecha_entrega_solicitada ? 
                new Date(orden.fecha_entrega_solicitada).toLocaleDateString('es-AR') : '-';
            const fechaProveedor = orden.fecha_entrega_proveedor ? 
                new Date(orden.fecha_entrega_proveedor).toLocaleDateString('es-AR') : '-';
            const fechaCreacion = new Date(orden.created_at).toLocaleDateString('es-AR');

            let itemsHtml = '';
            if (orden.items && orden.items.length > 0) {
                orden.items.forEach((item, index) => {
                    const editable = orden.estado === 'En Proceso';
                    itemsHtml += `
                        <tr>
                            <td>${index + 1}</td>
                            <td>${item.bien_codigo}</td>
                            <td>${item.bien_nombre}</td>
                            <td>${item.cantidad}</td>
                            <td>${editable ? 
                                `<input type="number" class="form-control form-control-sm cantidad-recibida" 
                                        data-item-id="${item.id}" value="${item.cantidad_recibida || 0}" step="0.01">` 
                                : (item.cantidad_recibida || 0)
                            }</td>
                            <td>${item.unidad_medida_nombre || '-'}</td>
                            <td>${item.proveedor_sugerido_nombre || '-'}</td>
                            <td>${item.descripcion || '-'}</td>
                        </tr>
                    `;
                });
            } else {
                itemsHtml = '<tr><td colspan="8" class="text-center">Sin items</td></tr>';
            }

            const html = `
                <div class="card mb-3">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            Orden ${orden.codigo} 
                            <span class="badge badge-${estadoClass} float-end">${orden.estado}</span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <p><strong>Proveedor:</strong> ${orden.proveedor_nombre || '-'}</p>
                                <p><strong>Condición:</strong> <span class="badge bg-warning text-dark">${orden.condicion}</span></p>
                                <p><strong>Creado por:</strong> ${orden.creado_por}</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>F. Entrega Solicitada:</strong> ${fechaSolicitada}</p>
                                <p><strong>F. Entrega Proveedor:</strong> ${fechaProveedor}</p>
                                <p><strong>Fecha Creación:</strong> ${fechaCreacion}</p>
                            </div>
                        </div>
                        ${orden.asunto ? `
                        <div class="row mb-3">
                            <div class="col-12">
                                <p><strong>Asunto:</strong></p>
                                <p class="border p-2 bg-light">${orden.asunto}</p>
                            </div>
                        </div>
                        ` : ''}
                        ${orden.archivo_adjunto ? `
                        <div class="row mb-3">
                            <div class="col-12">
                                <p><strong>Archivo Adjunto:</strong></p>
                                <a href="/uploads/ordenes-compra/${orden.archivo_adjunto}" target="_blank" class="btn btn-sm btn-info">
                                    <i class="bi bi-download me-1"></i>Descargar Archivo
                                </a>
                            </div>
                        </div>
                        ` : ''}
                    </div>
                </div>

                <div class="card">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0">Items de la Orden</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-sm">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Código</th>
                                        <th>Bien</th>
                                        <th>Cantidad</th>
                                        <th>Cant. Recibida</th>
                                        <th>Unidad</th>
                                        <th>Proveedor Sugerido</th>
                                        <th>Descripción</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    ${itemsHtml}
                                </tbody>
                            </table>
                        </div>
                        ${orden.estado === 'En Proceso' ? `
                        <div class="text-end mt-3">
                            <button class="btn btn-primary" onclick="guardarCantidadesRecibidas()">
                                <i class="bi bi-save me-1"></i>Guardar Cantidades Recibidas
                            </button>
                        </div>
                        ` : ''}
                    </div>
                </div>
            `;

            $('#ordenDetalle').html(html);
        }

        function guardarCantidadesRecibidas() {
            const updates = [];
            $('.cantidad-recibida').each(function() {
                const itemId = $(this).data('item-id');
                const cantidad = parseFloat($(this).val()) || 0;
                updates.push({ itemId, cantidad });
            });

            let completadas = 0;
            updates.forEach(update => {
                $.ajax({
                    url: `/api/ordenes-compra/${ordenId}/items/${update.itemId}/cantidad-recibida`,
                    method: 'PATCH',
                    headers: { 
                        'Authorization': `Bearer ${token}`,
                        'Content-Type': 'application/json'
                    },
                    data: JSON.stringify({ cantidad_recibida: update.cantidad }),
                    success: function() {
                        completadas++;
                        if (completadas === updates.length) {
                            mostrarAlerta('Cantidades actualizadas exitosamente', 'success');
                            cargarOrden();
                        }
                    },
                    error: function(xhr) {
                        const error = xhr.responseJSON?.error || 'Error al actualizar cantidad';
                        mostrarAlerta(error, 'danger');
                    }
                });
            });
        }

        function mostrarAlerta(mensaje, tipo) {
            const alerta = `
                <div class="alert alert-${tipo} alert-dismissible fade show" role="alert">
                    ${mensaje}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
            $('#alertPlaceholder').html(alerta);
            setTimeout(() => $('.alert').alert('close'), 5000);
        }
    </script>
</body>
</html>

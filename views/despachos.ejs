<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Regomax</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <!-- Custom styles -->
    <link rel="stylesheet" href="/assets/css/home.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/home">
                <img src="/assets/img/regomax.png" alt="Regomax Logo" class="bg-white rounded p-1">
                <span class="ms-2 fw-bold">Regomax S.A.</span>
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item user-welcome me-3">
                        <span class="text-light">BIENVENIDO/A, <b><%= username %></b></span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-globe me-1"></i> Ver sitio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-key me-1"></i> Cambiar contraseña</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" id="logout-link"><i class="bi bi-box-arrow-right me-1"></i> Cerrar sesión</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container my-4">
        <div class="row">
            <div class="col-lg-12">
                <div class="menu-container p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="menu-heading mb-0">
                            <i class="bi bi-truck me-2"></i>Despachos de Orden #<%= orden.id %>
                        </h4>
                        <div>
                            <a href="/ordenes/<%= orden.id %>" class="btn btn-outline-primary me-2">
                                <i class="bi bi-eye me-1"></i>Ver Orden
                            </a>
                            <a href="/despachos/nuevo" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-1"></i>Nuevo Despacho
                            </a>
                        </div>
                    </div>
                    
                    <!-- Resumen de la orden -->
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="card-title mb-0">
                                <i class="bi bi-clipboard-check me-2"></i>Información de la Orden
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Cliente:</strong> <%= orden.cliente %></p>
                                    <p><strong>Fecha:</strong> <%= new Date(orden.fecha).toLocaleDateString() %></p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Estado:</strong> <span class="badge bg-<%= orden.estado === 'en_proceso' ? 'warning' : orden.estado === 'en_logistica' ? 'primary' : 'success' %>"><%= orden.estado %></span></p>
                                    <p><strong>Última Actualización:</strong> <%= new Date(orden.fecha_actualizacion || orden.fecha).toLocaleString() %></p>
                                </div>
                            </div>
                            
                            <!-- Productos en la orden -->
                            <div class="mt-3">
                                <h6>Productos:</h6>
                                <div class="table-responsive">
                                    <table class="table table-sm table-bordered">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Producto</th>
                                                <th>Cantidad Original</th>
                                                <th>Cantidad Pendiente</th>
                                                <th>Estado</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (orden.productos && orden.productos.length > 0) { %>
                                                <% orden.productos.forEach(prod => { %>
                                                    <tr>
                                                        <td><%= prod.producto %></td>
                                                        <td><%= prod.cantidad_original %> kg</td>
                                                        <td><%= prod.cantidad %> kg</td>
                                                        <td>
                                                            <% if (prod.cantidad <= 0) { %>
                                                                <span class="badge bg-success">Completado</span>
                                                            <% } else if (prod.cantidad < prod.cantidad_original) { %>
                                                                <span class="badge bg-warning">Parcial</span>
                                                            <% } else { %>
                                                                <span class="badge bg-secondary">Pendiente</span>
                                                            <% } %>
                                                        </td>
                                                    </tr>
                                                <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="4" class="text-center">No hay productos en esta orden</td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Historial de Despachos -->
                    <div class="card">
                        <div class="card-header bg-light">
                            <h5 class="card-title mb-0">
                                <i class="bi bi-clock-history me-2"></i>Historial de Despachos
                            </h5>
                        </div>
                        <div class="card-body">
                            <% if (despachos && despachos.length > 0) { %>
                                <% despachos.forEach((despacho, index) => { %>
                                    <div class="card mb-3 border-<%= index === 0 ? 'primary' : 'light' %>">
                                        <div class="card-header bg-<%= index === 0 ? 'primary text-white' : 'light' %>">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <h6 class="mb-0">Despacho #<%= despacho.id %></h6>
                                                <div>
                                                    <span class="badge bg-light text-dark">
                                                        <i class="bi bi-calendar-event me-1"></i>
                                                        <%= new Date(despacho.fecha).toLocaleString() %>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <p><strong>Responsable:</strong> <%= despacho.responsable %></p>
                                            
                                            <% if (despacho.observaciones) { %>
                                                <p><strong>Observaciones:</strong> <%= despacho.observaciones %></p>
                                            <% } %>
                                            
                                            <!-- Bolsones despachados -->
                                            <h6 class="mt-3">Bolsones Despachados:</h6>
                                            <div class="table-responsive">
                                                <table class="table table-sm table-striped">
                                                    <thead>
                                                        <tr>
                                                            <th>#</th>
                                                            <th>Código</th>
                                                            <th>Producto</th>
                                                            <th>Peso</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% if (despacho.bolsones && despacho.bolsones.length > 0) { %>
                                                            <% let totalPeso = 0; %>
                                                            <% despacho.bolsones.forEach((bolson, i) => { %>
                                                                <% totalPeso += parseFloat(bolson.peso || 0); %>
                                                                <tr>
                                                                    <td><%= i + 1 %></td>
                                                                    <td><code><%= bolson.codigo %></code></td>
                                                                    <td><%= bolson.producto %></td>
                                                                    <td><%= parseFloat(bolson.peso).toFixed(2) %> kg</td>
                                                                </tr>
                                                            <% }); %>
                                                            <tr class="table-light">
                                                                <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                                                <td><strong><%= totalPeso.toFixed(2) %> kg</strong></td>
                                                            </tr>
                                                        <% } else { %>
                                                            <tr>
                                                                <td colspan="4" class="text-center">No hay bolsones en este despacho</td>
                                                            </tr>
                                                        <% } %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle me-2"></i>
                                    No hay despachos registrados para esta orden.
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <!-- Common JS -->
    <script src="/assets/js/common.js"></script>
</body>
</html>